<!-- Foundation -->
<window id="12">

	<defaultcontrol always="true">3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<controls>

		<include>Common_Settings_Background</include>
		
		<control type="group">
			
			<control type="label" id="2">
	
				<posx>60</posx>
				<posy>22</posy>
				<width>420</width>
				<height>32</height>
				<font>Settings-Menu-Header</font>
				<textcolor>Settings_Header</textcolor>
				<aligny>top</aligny>
				
			</control>

			<control type="grouplist" id="3">
					
				<description>grouplist for context buttons</description>
				<posx>0</posx>
				<posy>100</posy>
				<width>420</width>
				<height max="600">auto</height>
				<itemgap>0</itemgap>
				<onright>5</onright>
				
			</control>	
			
		</control>
		
		<control type="group">
		
			<posx>500</posx>
			<posy>0</posy>
			<width>700</width>
			<height>480</height>
		
			<control type="label">
		
				<posx>0</posx>
				<posy>22</posy>
				<width>520</width>
				<height>32</height>
				<label>$INFO[Container(3).ListItem(0).Label]</label>
				<font>Settings-Menu-Header</font>
				<textcolor>Settings_Header</textcolor>
				<aligny>top</aligny>
				
			</control>
			
			<control type="grouplist" id="5">
				
				<description>Control Area</description>
				<posx>0</posx>
				<posy>100</posy>
				<width>700</width>
				<height>540</height>
				<itemgap>0</itemgap>
				<onleft>3</onleft>
				<onright>3</onright>
				<orientation>vertical</orientation>
				<pagecontrol>81</pagecontrol>
				
			</control>
		
		</control>
		
		<!--Scrollbar-->
		<control type="scrollbar" id="81">
		
			<include>Common_Settings_Scrollbar_Vertical</include>
			
			<posx>1260</posx>
			<posy>100</posy>
			<height>540</height>
			
			<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Control.HasFocus(81)">Conditional</animation>
			
		</control>

		<control type="button" id="7">
			
			<description>Default Button</description>
			<include>Common_Settings_Button</include>
			
		</control>

		<control type="radiobutton" id="8">
			
			<description>Default Radio Button</description>
			<include>Common_Settings_RadioButton</include>
			
		</control>

		<control type="spincontrolex" id="9">
		
			<description>Default Spin Control</description>
			<include>Common_Settings_SpinButton</include>
			
		</control>

		<control type="button" id="10">
			
			<description>Default Category Button</description>
			<include>Common_Settings_Menu</include>
			
		</control>

	</controls>

</window>