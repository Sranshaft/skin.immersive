<includes>

	<include name="ViewThumbnail">
		
		<control type="group">
		
			<posx>60</posx>
			<posy>0</posy>
		
			<visible>Control.IsVisible(52)</visible>
			
			<include>Common_Animation_View</include>
		
			<control type="label">
					
				<label>explore</label>
				<include>Common_Section_Label</include>
				
			</control>
			
			<control type="panel" id="52">

				<posx>0</posx>
				<posy>20</posy>
				<width>1280</width>
				<height>480</height>
				<onup>10000</onup>
				<ondown>9000</ondown>
				<onleft>52</onleft>
				<onright>52</onright>
				<viewtype label="Thumb">wrap</viewtype>
				<orientation>horizontal</orientation>
				<pagecontrol>62</pagecontrol>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>4</preloaditems>
				
				<include>Common_Animation_HideWhenScrolling</include>
				
				<itemlayout width="390" height="230">

					<control type="group">
		
						<posx>0</posx>
						<posy>40</posy>
						<width>370</width>
						<height>210</height>
						
						<include>Common_LiveTile_Background_Wide</include>
						
						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>370</width>
							<height>210</height>
							<texture>colors/color_keyboard_dark.png</texture>
							
						</control>
						
						<control type="image">
					
							<posx>0</posx>
							<posy>0</posy>
							<width>370</width>
							<height>210</height>
							<texture background="true" fallback="colors/color_keyboard_dark.png">$VAR[Tile_Image]</texture>
							<aspectratio>scale</aspectratio>
							
						</control>
						
						<control type="image">
						
							<posx>0</posx>
							<posy>150</posy>
							<width>370</width>
							<height>60</height>
							<texture>colors/color_white.png</texture>
							<colordiffuse>FanartDiffuse</colordiffuse>
							
						</control>
							
						<control type="label">
							
							<posx>10</posx>
							<posy>158</posy>
							<width>350</width>
							<height>20</height>
							<textcolor>Label_Normal</textcolor>
							<font>Menu-Thumbnail-Header</font>
							<aligny>top</aligny>
							<label>$INFO[ListItem.Label]</label>
						
						</control>
						
						<control type="label">
							
							<posx>10</posx>
							<posy>178</posy>
							<width>350</width>
							<height>20</height>
							<textcolor>Label_Normal</textcolor>
							<font>Menu-Thumbnail-Detail</font>
							<aligny>top</aligny>
							<label>$VAR[ExtendedList_Detail]</label>
							
						</control>
						
						<control type="group">
						
							<posx>0</posx>
							<posy>118</posy>
							<width>32</width>
							<height>32</height>
		
							<include>Common_View_Overlay</include>
		
						</control>
						
					</control>
					
				</itemlayout>

				<focusedlayout width="390" height="230">
				
					<control type="group">
		
						<posx>0</posx>
						<posy>40</posy>
						<width>370</width>
						<height>210</height>
						
						<include>Common_Animation_LiveTile_Background</include>
						
						<include>Common_LiveTile_Background_Wide</include>
						
					</control>
				
					<!--Front Side Info-->
					<control type="group">
						
						<posx>0</posx>
						<posy>40</posy>
						<width>370</width>
						<height>210</height>
					
						<include>Common_Animation_LiveTile_Front</include>
						
						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>370</width>
							<height>210</height>
							<texture>colors/color_keyboard_dark.png</texture>
							
						</control>
					
						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>370</width>
							<height>210</height>
							<texture background="true" fallback="colors/color_keyboard_dark.png">$VAR[Tile_Image]</texture>
							<aspectratio>scale</aspectratio>
							
						</control>
						
						<control type="image">
						
							<posx>0</posx>
							<posy>150</posy>
							<width>370</width>
							<height>60</height>
							<texture>colors/color_white.png</texture>
							<colordiffuse>Background_Highlight</colordiffuse>
							
						</control>
							
						<control type="label">
							
							<posx>10</posx>
							<posy>158</posy>
							<width>350</width>
							<height>20</height>
							<textcolor>Label_Normal</textcolor>
							<font>Menu-Thumbnail-Header</font>
							<aligny>top</aligny>
							<label>$INFO[ListItem.Label]</label>
						
						</control>
						
						<control type="label">
							
							<posx>10</posx>
							<posy>178</posy>
							<width>350</width>
							<height>20</height>
							<textcolor>Label_Normal</textcolor>
							<font>Menu-Thumbnail-Detail</font>
							<aligny>top</aligny>
							<label>$VAR[ExtendedList_Detail]</label>
							
						</control>
						
						<control type="group">
						
							<posx>0</posx>
							<posy>118</posy>
							<width>32</width>
							<height>32</height>
		
							<include>Common_View_Overlay</include>
		
						</control>

					</control>
					
					<!--Back Side Info-->
					<control type="group">
					
						<posx>0</posx>
						<posy>40</posy>
						<width>370</width>
						<height>210</height>
						
						<include>Common_Animation_LiveTile_Back</include>
						
						<control type="image">
						
							<include>Common_LiveTile_Rating</include>
							<visible>System.IdleTime(2)</visible>
							
						</control>
						
						<control type="textbox">
							
							<include>Common_LiveTile_Description_Wide</include>
							<label>$VAR[Tile_Description]</label>
							<visible>System.IdleTime(2)</visible>
				
						</control>
						
						<control type="image">
							
							<posx>320</posx>
							<posy>20</posy>
							<width>26</width>
							<height>26</height>
							<texture>$INFO[ListItem.Overlay]</texture>
							<aspectratio>center</aspectratio>
							<colordiffuse>Tile_Text</colordiffuse>
							<visible>System.IdleTime(2)</visible>
							
						</control>
						
					</control>
					
				</focusedlayout>

			</control>
			
			<!--Scrollbar-->
			<control type="scrollbar" id="62">
				
				<include>Common_Scrollbar_Horizontal</include>
				<posy>520</posy>
				
				<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(52).Scrolling">Conditional</animation>
				
			</control>
		
		</control>
		
	</include>

</includes>