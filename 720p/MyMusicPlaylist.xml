<?xml version="1.0" encoding="UTF-8"?>

<window id="500">

	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<controls>

		<!--Background Area-->
		<include>Common_Background</include>
		
		<control type="group">
		
			<include>Common_Dimensions</include>
			<include>Common_Animation_Window</include>
		
			<!--Top Area-->
			<include>Common_Breadcrumb</include>
			<include>Common_Clock</include>
			<include>Common_Overlay</include>

			<!--Content Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>100</posy>
				<width>1280</width>
				<height>480</height>
				
				<!--Animation-->
				<include>Common_Animation_Content</include>
				
				<!--Now Playing Infomation-->
				<control type="group">
				
					<posx>60</posx>
					<posy>0</posy>
					<width>400</width>
					<height>480</height>
				
					<control type="label">
							
						<label>now playing</label>
						<include>Common_Section_Label</include>
						
					</control>
					
					<control type="label">
						
						<posx>0</posx>
						<posy>60</posy>
						<width min="20" max="600">auto</width>
						<height>32</height>
						<label>[UPPERCASE]$INFO[MusicPlayer.Artist][/UPPERCASE]</label>
						<textcolor>Label_Normal</textcolor>
						<font>Fullscreen-Info-Large</font>
					
					</control>
					
					<control type="label">
						
						<posx>0</posx>
						<posy>100</posy>
						<width min="20" max="600">auto</width>
						<height>32</height>
						<label>[UPPERCASE][B]$INFO[MusicPlayer.Album][/B][/UPPERCASE]</label>
						<textcolor>Label_Normal</textcolor>
						<font>Fullscreen-Info-Normal</font>
					
					</control>
					
					<control type="group">
					
						<posx>0</posx>
						<posy>150</posy>
						<width>300</width>
						<height>320</height>
					
						<control type="image">
					
							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>300</height>
							<texture background="true">$INFO[MusicPlayer.Cover]</texture>
						
						</control>
						
					</control>
					
					<!--Current Time-->
					<control type="group">
					
						<posx>0</posx>
						<posy>470</posy>
						<width>300</width>
						<height>40</height>
						
						<visible>Player.HasMedia</visible>
					
						<!--Progress Bar-->
						<control type="progress" id="12">
						
							<description>My first progress control</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>5</height>
							<texturebg border="2">colors/color_grey.png</texturebg>
							<lefttexture>-</lefttexture>
							<midtexture border="2">colors/color_silver.png</midtexture>
							<righttexture>-</righttexture>
							<info>Player.ProgressCache</info>
							
						</control>
						
						<!--Progress Bar-->
						<control type="progress" id="12">
						
							<description>My first progress control</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>5</height>
							<texturebg border="2">colors/color_transparent.png</texturebg>
							<lefttexture>-</lefttexture>
							<midtexture border="2">colors/color_white.png</midtexture>
							<righttexture>-</righttexture>
							<info>Player.Progress</info>
							<colordiffuse>Background_Highlight</colordiffuse>
							
						</control>
						
						<control type="slider">

							<posx>0</posx>
							<posy>0</posy>
							<width>300</width>
							<height>5</height>
							<texturesliderbar border="2">colors/color_transparent.png</texturesliderbar>
							<textureslidernib border="2">colors/color_white.png</textureslidernib>
							<textureslidernibfocus border="2">colors/color_white.png</textureslidernibfocus>
							<info>Player.Progress</info>
							<action>seek</action>
							<controloffsetx></controloffsetx>
							<controloffsety></controloffsety>
							<pulseonselect></pulseonselect>
							
						</control>
					
						<control type="label">
						
							<posx>0</posx>
							<posy>10</posy>
							<width>100</width>
							<height>40</height>
							<label>$INFO[Player.Time]</label>
							<textcolor>Label_Normal</textcolor>
							<font>Fullscreen-Info-Small</font>
							<aligny>top</aligny>
						
						</control>
						
						<!--Total Time-->
						<control type="label">
						
							<posx>300</posx>
							<posy>10</posy>
							<width>100</width>
							<height>40</height>
							<label>$INFO[Player.Duration]</label>
							<textcolor>Label_Normal</textcolor>
							<font>Fullscreen-Info-Small</font>
							<align>right</align>
							<aligny>top</aligny>
						
						</control>
						
					</control>	
				
					<control type="label">
					
						<posx>0</posx>
						<posy>510</posy>
						<width min="20" max="600">auto</width>
						<height>32</height>
						<label>[UPPERCASE]$INFO[MusicPlayer.Title][/UPPERCASE]</label>
						<textcolor>Label_Normal</textcolor>
						<font>Fullscreen-Info-Normal</font>
						<aligny>top</aligny>
					
					</control>
					
					<control type="label">
					
						<posx>0</posx>
						<posy>540</posy>
						<width min="20" max="600">auto</width>
						<height>64</height>
						<label>[UPPERCASE]$INFO[MusicPlayer.Offset(1).Title][/UPPERCASE]</label>
						<font>Menu-List-Small</font>
						<textcolor>Label_Disabled</textcolor>
						<aligny>top</aligny>
					
					</control>
					
					<control type="label">
					
						<posx>0</posx>
						<posy>560</posy>
						<width min="20" max="600">auto</width>
						<height>64</height>
						<label>[UPPERCASE]$INFO[MusicPlayer.Offset(2).Title][/UPPERCASE]</label>
						<font>Menu-List-Small</font>
						<textcolor>Label_Disabled</textcolor>
						<aligny>top</aligny>
					
					</control>
					
				</control>
				
				<!--Playlist list-->
				<control type="group">
				
					<posx>800</posx>
					<posy>0</posy>
					<width>400</width>
					<height>480</height>
				
					<control type="label">
						
						<label>playlist</label>
						<include>Common_Section_Label</include>
						
					</control>
					
					<control type="label">
							
						<posx>0</posx>
						<posy>60</posy>
						<width>330</width>
						<height>400</height>
						<label>No further songs have been queued.</label>
						<font>Menu-List</font>
						<textcolor>Label_Normal</textcolor>
						<wrapmultiline>true</wrapmultiline>
						<aligny>top</aligny>
						
						<animation type="Conditional" condition="IntegerGreaterThan(Container(50).NumItems,1)">
							<effect type="fade" start="100" end="0" time="200" />
						</animation>
						
					</control>
					
					<control type="list" id="50">
								
						<posx>0</posx>
						<posy>60</posy>
						<width>400</width>
						<height>480</height>
						<onleft>9000</onleft>
						<onright>9000</onright>
						<onup>59</onup>
						<ondown>59</ondown>
						<pagecontrol>69</pagecontrol>
						<viewtype label="535">list</viewtype>
						<scrolltime tween="cubic" easing="out">600</scrolltime>
						<preloaditems>2</preloaditems>
						
						<animation type="Conditional" condition="!IntegerGreaterThan(Container(50).NumItems,1)">
							<effect type="fade" start="100" end="0" time="200" />
						</animation>
						
						<itemlayout width="400" height="60">
						
							<control type="multiimage">
								
								<posx>20</posx>
								<posy>0</posy>
								<width>15</width>
								<height>60</height>
								<imagepath>nowplaying/</imagepath>
								<colordiffuse>Label_Normal</colordiffuse>
								<aspectratio>center</aspectratio>
								<timeperimage>1000</timeperimage>
								<fadetime>400</fadetime>
								<randomize>true</randomize>
								<loop>yes</loop>
								<visible>ListItem.IsPlaying</visible>
								
								<animation type="VisibleChange">
									<effect type="fade" start="0" end="100" time="400" delay="200" />
								</animation>
								
							</control>
							
							<control type="group">
							
								<animation type="Conditional" condition="ListItem.IsPlaying">
									<effect type="slide" start="0,0" end="20,0" time="400" />
								</animation>
								
								<control type="textbox">
								
									<posx>32</posx>
									<posy>0</posy>
									<width min="20" max="336">auto</width>
									<height>36</height>
									<label>$INFO[ListItem.Title]</label>
									<font>Menu-List</font>
									<textcolor>Label_Normal</textcolor>
									<aligny>top</aligny>
									
								</control>
								
								<control type="textbox">
								
									<posx>32</posx>
									<posy>30</posy>
									<width min="20" max="336">auto</width>
									<height>30</height>
									<label>[UPPERCASE]$INFO[ListItem.Album][/UPPERCASE]</label>
									<font>Menu-List-Small</font>
									<textcolor>Label_Normal</textcolor>
									<selectedcolor>Label_Highlight</selectedcolor>
									<aligny>top</aligny>
									
								</control>
								
							</control>	
							
						</itemlayout>

						<focusedlayout width="400" height="60">

							<control type="image">
										
								<posx>0</posx>
								<posy>0</posy>
								<width>400</width>
								<height>60</height>
								<texture background="true">colors/color_keyboard.png</texture>
								<visible>!Control.HasFocus(50)</visible>
								
							</control>

							<control type="image">
							
								<posx>0</posx>
								<posy>0</posy>
								<width>400</width>
								<height>60</height>
								<texture>colors/color_white.png</texture>
								<colordiffuse>Background_Highlight</colordiffuse>
								<visible>Control.HasFocus(50)</visible>
							
							</control>
							
							<control type="multiimage">
								
								<posx>20</posx>
								<posy>0</posy>
								<width>15</width>
								<height>60</height>
								<imagepath>nowplaying/</imagepath>
								<aspectratio>center</aspectratio>
								<timeperimage>1000</timeperimage>
								<fadetime>400</fadetime>
								<randomize>true</randomize>
								<loop>yes</loop>
								<visible>ListItem.IsPlaying</visible>
								
								<animation type="VisibleChange">
									<effect type="fade" start="0" end="100" time="400" delay="200" />
								</animation>
								
							</control>
							
							<control type="group">
							
								<animation type="Conditional" condition="ListItem.IsPlaying">
									<effect type="slide" start="0,0" end="20,0" time="400" />
								</animation>
						
								<control type="textbox">
								
									<posx>32</posx>
									<posy>0</posy>
									<width min="20" max="336">auto</width>
									<height>36</height>
									<label>$INFO[ListItem.Title]</label>
									<font>Menu-List</font>
									<textcolor>Label_Normal</textcolor>
									<aligny>top</aligny>
									
								</control>
								
								<control type="textbox">
								
									<posx>32</posx>
									<posy>30</posy>
									<width min="20" max="336">auto</width>
									<height>30</height>
									<label>[UPPERCASE]$INFO[ListItem.Album][/UPPERCASE]</label>
									<font>Menu-List-Small</font>
									<textcolor>Label_Normal</textcolor>
									<aligny>top</aligny>
									
								</control>
								
							</control>	

						</focusedlayout>

					</control>
					
					<control type="label">
					
						<posx>0</posx>
						<posy>560</posy>
						<width>400</width>
						<height>64</height>
						<label>[UPPERCASE]$INFO[Container(50).NumItems,Total Items: ,][/UPPERCASE]</label>
						<font>Menu-List-Small</font>
						<textcolor>Label_Disabled</textcolor>
						<align>left</align>
						<aligny>top</aligny>
					
					</control>
					
					<control type="label">
					
						<posx>400</posx>
						<posy>560</posy>
						<width>400</width>
						<height>64</height>
						<label>[UPPERCASE]$INFO[Container(50).Totaltime,Total Playing Time: ,][/UPPERCASE]</label>
						<font>Menu-List-Small</font>
						<textcolor>Label_Disabled</textcolor>
						<align>right</align>
						<aligny>top</aligny>
					
					</control>
					
					<!--Scrollbar-->
					<control type="group">
						
						<visible>IntegerGreaterThan(Container(50).NumPages,1)</visible>
						
						<control type="scrollbar" id="69">
						
							<include>Common_Scrollbar_Vertical</include>
						
							<posx>420</posx>
							<posy>60</posy>
							<height>480</height>
							<onleft>50</onleft>
							<onright>9000</onright>
							
							<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(50).Scrolling">Conditional</animation>
							
						</control>
					
					</control>
					
				</control>	
				
			</control>

			<!--Bottom Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>620</posy>
				<width>1280</width>
				<height>100</height>
			
			</control>
			
			<include>Common_AppBar</include>
			
		</control>	

	</controls>

</window>