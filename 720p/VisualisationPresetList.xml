<!-- Foundation -->
<window id="122">
	
	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="400" />
	</animation>
	
	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="400" delay="400" />
	</animation>
	
	<controls>
	
		<control type="group">
		
			<!--Top Area-->
			<control type="image">
					
				<include>Common_Dimensions</include>
				<texture>overlays/overlay_fullscreen_top.png</texture>
				
			</control>
			
			<include>Common_Breadcrumb_Alt</include>
			
			<!--Information Area-->
			<control type="group">
			
				<posx>550</posx>
				<posy>0</posy>
				<width>730</width>
				<height>720</height>
				
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="400" delay="400"/>
					<effect type="slide" start="1280,0" end="0,0" time="800" delay="400" tween="cubic" easing="out" />
				</animation>
				
				<animation type="WindowClose">
					<effect type="fade" start="100" end="0" time="400" />
					<effect type="slide" start="0,0" end="1280,0" time="800" tween="cubic" easing="out" />
				</animation>
				
				<control type="image">
				
					<posx>0</posx>
					<posy>0</posy>
					<width>730</width>
					<height>720</height>
					<texture background="true">colors/color_white.png</texture>
					<colordiffuse>FanartDiffuse</colordiffuse>
				
				</control>
				
				<control type="label" id="4">
						
					<posx>32</posx>
					<posy>100</posy>
					<width>330</width>
					<height>400</height>
					<label>-</label>
					<font>Menu-List</font>
					<textcolor>Label_Normal</textcolor>
					<wrapmultiline>true</wrapmultiline>
					<aligny>top</aligny>
					<visible>IsEmpty(Container(2).ListItem(0).Label)</visible>
					
				</control>
				
				<control type="list" id="2">
					
					<description>Control Area</description>
					<posx>0</posx>
					<posy>40</posy>
					<width>730</width>
					<height>660</height>
					<viewtype label="535">list</viewtype>
					<scrolltime tween="cubic" easing="out">600</scrolltime>
					<preloaditems>2</preloaditems>
					<onleft>2</onleft>
					<onright>2</onright>
					
					<itemlayout width="700" height="60">

						<control type="label">
							
							<posx>32</posx>
							<posy>0</posy>
							<width>636</width>
							<height>60</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Menu-List</font>
							<textcolor>Label_Normal</textcolor>
							
						</control>

					</itemlayout>

					<focusedlayout width="700" height="60">

						<control type="image">
							
							<posx>0</posx>
							<posy>0</posy>
							<width>730</width>
							<height>60</height>
							<texture>colors/color_white.png</texture>
							<colordiffuse>Background_Highlight</colordiffuse>
							
						</control>

						<control type="label">
							
							<posx>32</posx>
							<posy>0</posy>
							<width>636</width>
							<height>60</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Menu-List</font>
							<textcolor>Label_Normal</textcolor>
							
						</control>

					</focusedlayout>
					
				</control>
				
			</control>
			
		</control>	

	</controls>

</window>
	
	
	
	
	
	
	
	
	
	
	
