<?xml version="1.0" encoding="UTF-8"?>

<window>

	<defaultcontrol>111</defaultcontrol>
	<zorder>1</zorder>
	<type>dialog</type>
	
	<controls>
	
		<control type="group">
			
			<posx>0</posx>
			<posy>0</posy>
			
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="400" delay="200" />
			</animation>
			
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="400" delay="200" />
			</animation>
			
			<control type="image">
			
				<include>Common_Dimensions</include>
				<texture>colors/color_keyboard_dark.png</texture>
				
			</control>	
			
			<control type="label">
								
				<posx>32</posx>
				<posy>20</posy>
				<width min="20" max="1216">auto</width>
				<height>30</height>
				<label>$INFO[Window.Property(caption)]</label>
				<font>Select-Large</font>
				<textcolor>Label_Normal</textcolor>
				<aligny>top</aligny>
				
			</control>
			
			<control type="label">
								
				<posx>32</posx>
				<posy>60</posy>
				<width min="20" max="1216">auto</width>
				<height>30</height>
				<label>$INFO[Container(111).NumItems] items</label>
				<font>Select-Small</font>
				<textcolor>Label_Normal</textcolor>
				<aligny>top</aligny>
				
			</control>
	
			<control type="list" id="111">
						
				<posx>0</posx>
				<posy>90</posy>
				<width>1240</width>
				<height>600</height>
				<onup>111</onup>
				<ondown>111</ondown>
				<onright>5</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="List">list</viewtype>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				
				<itemlayout width="1240" height="50">

					<control type="label">
					
						<posx>32</posx>
						<posy>0</posy>
						<width min="20" max="1216">auto</width>
						<height>50</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Menu-List</font>
						<textcolor>Label_Normal</textcolor>
						<selectedcolor>Background_Highlight</selectedcolor>
						<aligny>center</aligny>
						
					</control>
					
				</itemlayout>

				<focusedlayout width="1240" height="50">
				
					<control type="label">
					
						<posx>32</posx>
						<posy>0</posy>
						<width min="20" max="1216">auto</width>
						<height>50</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Menu-List</font>
						<textcolor>Background_Highlight</textcolor>
						<selectedcolor>Background_Highlight</selectedcolor>
						<aligny>center</aligny>
						
					</control>
					
				</focusedlayout>

			</control>
			
			<!--Scrollbar-->
			<control type="scrollbar" id="60">
				
				<posx>1260</posx>
				<posy>90</posy>
				<height>600</height>
				
				<include>Common_Scrollbar_Vertical</include>
				
				<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(3).Scrolling">Conditional</animation>
				
			</control>
			
		</control>
		
	</controls>

</window>	
