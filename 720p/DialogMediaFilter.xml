<?xml version="1.0" encoding="UTF-8"?>

<window id="152">

	<defaultcontrol always="true">5</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="400" />
	</animation>
	
	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="400" delay="400" />
	</animation>
	
	<controls>
	
		<control type="group">
		
			<!--Top Area-->
			<control type="image">
		
				<include>Common_Dimensions</include>
				<texture background="true">colors/color_white.png</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				
				<include>Common_Animation_Window_Dark</include>
				
			</control>
			
			<!--Information Area-->
			<control type="group">
			
				<posx>580</posx>
				<posy>0</posy>
				<width>700</width>
				<height>720</height>
				
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="400" delay="400"/>
					<effect type="slide" start="1280,0" end="0,0" time="800" delay="400" tween="cubic" easing="out" />
				</animation>
				
				<animation type="WindowClose">
					<effect type="fade" start="100" end="0" time="400" />
					<effect type="slide" start="0,0" end="1280,0" time="800" tween="cubic" easing="out" />
				</animation>
				
				<control type="image">
				
					<posx>0</posx>
					<posy>0</posy>
					<width>700</width>
					<height>720</height>
					<texture background="true">colors/color_keyboard_dark.png</texture>		
				
				</control>
				
				<control type="grouplist">
			
					<posx>32</posx>
					<posy>20</posy>
					<width>1100</width>
					<height>60</height>
					<orientation>horizontal</orientation>
					<itemgap>20</itemgap>
					<usecontrolcoords>true</usecontrolcoords>
					<aligny>center</aligny>
					
					<control type="button">
						
						<posy>12</posy>
						<width>32</width>
						<height>32</height>
						<texturefocus aligny="center">breadcrumb/breadcrumb_backarrow_focus.png</texturefocus>
						<texturenofocus aligny="center">breadcrumb/breadcrumb_backarrow.png</texturenofocus>
						<aspectratio>keep</aspectratio>
						<colordiffuse>Label_Normal</colordiffuse>
						<onclick>back</onclick>
						
					</control>
					
					<control type="label">
						
						<width min="0" max="850">auto</width>
						<height>60</height>
						<label>Smart filter</label>
						<font>Menu-Header</font>
						<textcolor>Label_Normal</textcolor>
						<aligny>center</aligny>
						
					</control>
					
				</control>	
			
				<control type="grouplist" id="5">
					
					<description>Control Area</description>
					<posx>0</posx>
					<posy>100</posy>
					<width>700</width>
					<height>600</height>
					<itemgap>0</itemgap>
					<onleft>3</onleft>
					<onright>3</onright>
					<orientation>vertical</orientation>
					
				</control>
				
				<control type="button" id="7">
				
					<description>Default Button</description>
					<textcolor>Label_Normal</textcolor>
					<disabledcolor>Label_Disabled</disabledcolor>
					<include>Common_OSD_Settings_Button</include>
					
				</control>

				<control type="radiobutton" id="8">
					
					<description>Default Radio Button</description>
					<textcolor>Label_Normal</textcolor>
					<disabledcolor>Label_Disabled</disabledcolor>
					<include>Common_OSD_Settings_RadioButton</include>
					
				</control>

				<control type="spincontrolex" id="9">
				
					<description>Default Spin Control</description>
					<textcolor>Label_Normal</textcolor>
					<disabledcolor>Label_Disabled</disabledcolor>
					<include>Common_OSD_Settings_SpinButton</include>
					
				</control>

				<control type="edit" id="12">
					
					<description>Default Category Button</description>
					<textcolor>Label_Normal</textcolor>
					<disabledcolor>Label_Disabled</disabledcolor>
					<include>Common_OSD_Settings_Edit</include>
					
				</control>

				<control type="sliderex" id="13">
					
					<description>Default Category Button</description>
					<textcolor>Label_Normal</textcolor>
					<disabledcolor>Label_Disabled</disabledcolor>
					<include>Common_OSD_Settings_SliderEx</include>
					
				</control>
			
			</control>
			
		</control>	

	</controls>

</window>