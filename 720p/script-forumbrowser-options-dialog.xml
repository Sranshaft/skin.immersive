						<posx>0</posx>
						<posy>0</posy>
						<width>48</width>
						<height>48</height>
						<texture>$VAR[ForumBrowser_Options_Image_Focused]</texture>
						
					</control>
					
					<control type="label">
						
						<posx>24</posx>
						<posy>54</posy>
						<width>60</width>
						<height>20</height>
						<label>$VAR[ForumBrowser_Options_Label]</label>
						<font>Appbar-Label-Small</font>
						<align>center</align>
						<aligny>top</aligny>
						<wrapmultiline>true</wrapmultiline>
						
					</control>
					
				</focusedlayout>
				
			</control>
			
			<control type="textbox" id="310">
				<posx>20</posx>
				<posy>20</posy>
				<width>420</width>
				<height>580</height>
				<font>ForumBrowser-font13</font>
				<textcolor>white</textcolor>
				<align>center</align>
				<info>Container(120).ListItem.Label2</info>
			</control>
			
		</control>
		
	</controls>
	
</window>
