<?xml version="1.0" encoding="UTF-8"?>

<window id="125">

	<defaultcontrol always="true">2</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<animation type="WindowOpen">
		<effect type="fade" start="0" end="100" time="400" />
	</animation>
	
	<animation type="WindowClose">
		<effect type="fade" start="100" end="0" time="400" delay="400" />
	</animation>

	<controls>
	
		<control type="group">
		
			<!--Top Area-->
			<control type="image">
					
				<include>Common_Dimensions</include>
				<texture>overlays/overlay_fullscreen_top.png</texture>
				
			</control>
			
			<include>Common_Breadcrumb_Alt</include>
		
			<!--Information Area-->
			<control type="group">
			
				<posx>880</posx>
				<posy>0</posy>
				<width>400</width>
				<height>720</height>
				
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="400" delay="400"/>
					<effect type="slide" start="1280,0" end="0,0" time="800" delay="400" tween="cubic" easing="out" />
				</animation>
				
				<animation type="WindowClose">
					<effect type="fade" start="100" end="0" time="400" />
					<effect type="slide" start="0,0" end="1280,0" time="800" tween="cubic" easing="out" />
				</animation>
				
				<control type="image">
				
					<posx>0</posx>
					<posy>0</posy>
					<width>700</width>
					<height>720</height>
					<texture background="true">colors/color_white.png</texture>
					<colordiffuse>FanartDiffuse</colordiffuse>
				
				</control>
				
				<control type="textbox">
						
					<posx>32</posx>
					<posy>32</posy>
					<width>356</width>
					<height>16</height>
					<label>available bookmarks</label>
					<font>Appbar-Label-Small</font>
					<textcolor>Label_Normal</textcolor>
					<aligny>top</aligny>
					
				</control>
				
				<control type="image">
						
					<posx>32</posx>
					<posy>60</posy>
					<width>336</width>
					<height>1</height>
					<texture>colors/color_white.png</texture>
					
				</control>
				
				<control type="label">
						
					<posx>32</posx>
					<posy>100</posy>
					<width>330</width>
					<height>400</height>
					<label>No bookmarks available.[CR][CR]Click 'Create bookmark' to add a new bookmark.</label>
					<font>Menu-List</font>
					<textcolor>Label_Normal</textcolor>
					<wrapmultiline>true</wrapmultiline>
					<aligny>top</aligny>
					<visible>!IntegerGreaterThan(Container(11).NumItems,0)</visible>
					
				</control>
				
				<control type="list" id="11">
						
					<posx>0</posx>
					<posy>76</posy>
					<width>700</width>
					<height>480</height>
					<onleft>9000</onleft>
					<onright>9000</onright>
					<onup>3</onup>
					<ondown>2</ondown>
					<pagecontrol>9011</pagecontrol>
					<viewtype label="535">list</viewtype>
					<scrolltime tween="cubic" easing="out">600</scrolltime>
					<preloaditems>2</preloaditems>
					
					<itemlayout width="700" height="60">
					
						<control type="image">
						
							<posx>32</posx>
							<posy>0</posy>
							<width>100</width>
							<height>60</height>
							<texture fallback="colors/color_keyboard_dark.png" >$INFO[ListItem.Thumb]</texture>
							<aspectratio>scale</aspectratio>
							
						</control>

						<control type="label">
						
							<posx>152</posx>
							<posy>0</posy>
							<width min="20" max="380">auto</width>
							<height>60</height>
							<label>[LOWERCASE]$INFO[ListItem.Label][/LOWERCASE]</label>
							<font>Menu-List</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>center</aligny>
							
						</control>

					</itemlayout>

					<focusedlayout width="700" height="60">
					
						<control type="image">
									
							<posx>0</posx>
							<posy>0</posy>
							<width>400</width>
							<height>60</height>
							<texture background="true">colors/color_keyboard.png</texture>
							<visible>!Control.HasFocus(11)</visible>
							
						</control>

						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>400</width>
							<height>60</height>
							<texture>colors/color_white.png</texture>
							<colordiffuse>Background_Highlight</colordiffuse>
							<visible>Control.HasFocus(11)</visible>
						
						</control>
						
						<control type="image">
						
							<posx>32</posx>
							<posy>0</posy>
							<width>100</width>
							<height>60</height>
							<texture fallback="colors/color_keyboard_dark.png">$INFO[ListItem.Thumb]</texture>
							<aspectratio>scale</aspectratio>
							
						</control>
					
						<control type="label">
						
							<posx>152</posx>
							<posy>0</posy>
							<width min="20" max="380">auto</width>
							<height>60</height>
							<label>[LOWERCASE]$INFO[ListItem.Label][/LOWERCASE]</label>
							<font>Menu-List</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>center</aligny>
							<scrollspeed>0</scrollspeed>
							
						</control>

					</focusedlayout>

				</control>
				
				<control type="grouplist" id="9000">
				
					<posx>32</posx>
					<posy>570</posy>
					<width>400</width>
					<height>200</height>
					<itemgap>10</itemgap>
					<orientation>vertical</orientation>
					<aligny>bottom</aligny>
					
					<control type="image">
						
						<posx>32</posx>
						<posy>0</posy>
						<width>336</width>
						<height>1</height>
						<texture>colors/color_white.png</texture>
						
					</control>
					
					<control type="group">
					
						<height>32</height>

						<control type="button" id="2">
						
							<include>Common_AppBar_Button_Small</include>
							<texturefocus>appbar/appbar_addbookmark_focus.png</texturefocus>
							<texturenofocus>appbar/appbar_addbookmark.png</texturenofocus>
							<onup>11</onup>
							<ondown>3</ondown>
							
						</control>
						
						<control type="label">
						
							<posx>48</posx>
							<posy>-2</posy>
							<width min="20" max="380">auto</width>
							<height>32</height>
							<label>create bookmark</label>
							<font>Appbar-Label</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>center</aligny>
							
						</control>
					
					</control>
					
					<control type="group">
						
						<height>32</height>
					
						<control type="button" id="3">
							
							<include>Common_AppBar_Button_Small</include>
							<texturefocus>appbar/appbar_deletebookmark_focus.png</texturefocus>
							<texturenofocus>appbar/appbar_deletebookmark.png</texturenofocus>
							<onup>2</onup>
							<ondown>11</ondown>
							
						</control>
						
						<control type="label">
						
							<posx>48</posx>
							<posy>-2</posy>
							<width min="20" max="380">auto</width>
							<height>32</height>
							<label>delete bookmark</label>
							<font>Appbar-Label</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>center</aligny>
							
						</control>
						
						<control type="textbox">
						
							<posx>48</posx>
							<posy>36</posy>
							<width>300</width>
							<height>42</height>
							<label>choosing this will delete all bookmarks. Use caution when selecting this option.</label>
							<font>Appbar-Label-Small</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>top</aligny>
							
						</control>
						
					</control>	
					
				</control>
				
			</control>
			
		</control>

	</controls>

</window>
