<!-- Foundation -->
<window id="104">
	
	<defaultcontrol always="true">-</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<animation type="WindowOpen" condition="!Window.Previous(mutebug)">
		<effect type="fade" start="0" end="100" time="100" />
	</animation>
	
	<animation type="WindowClose" condition="!Window.Next(mutebug)">
		<effect type="fade" start="100" end="0" time="400" />
	</animation>
	
	<controls>
	
		<control type="group">
			
			<posx>40</posx>
			<posy>40</posy>
			<width>60</width>
			<height>145</height>
			
			<visible>!StringCompare(Player.Volume,-60 dB) + !Player.HasMedia</visible>
		
			<control type="image">
				
				<posx>0</posx>
				<posy>0</posy>
				<width>60</width>
				<height>145</height>
				<texture>colors/color_white.png</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				
			</control>
			
			<control type="image">
				
				<posx>14</posx>
				<posy>104</posy>
				<width>32</width>
				<height>32</height>
				<texture>kai/kai_volume.png</texture>
				<aspectratio>scale</aspectratio>
				
			</control>
			
			<control type="image">
				
				<posx>25</posx>
				<posy>20</posy>
				<width>10</width>
				<height>80</height>
				<texture>colors/color_grey.png</texture>
				
			</control>
			
			<control type="progress" id="32">
			
				<posx>-45</posx>
				<posy>-20</posy>
				<width>80</width>
				<height>10</height>
				<texturebg border="2">colors/color_transparent.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture border="2">colors/color_white.png</midtexture>
				<righttexture>-</righttexture>
				<info>Player.Volume</info>
				<colordiffuse>Background_Highlight</colordiffuse>
				
				<animation effect="rotate" end="90" time="0" center="50,5" condition="true">Conditional</animation>
				
			</control>
			
			<control type="slider">

				<posx>-45</posx>
				<posy>-20</posy>
				<width>80</width>
				<height>10</height>
				<visible>true</visible>
				<texturesliderbar border="2">colors/color_transparent.png</texturesliderbar>
				<textureslidernib border="2">colors/color_white.png</textureslidernib>
				<textureslidernibfocus border="2">colors/color_white.png</textureslidernibfocus>
				<info>Player.Volume</info>
				<action>volume</action>
				<controloffsetx></controloffsetx>
				<controloffsety></controloffsety>
				<pulseonselect></pulseonselect>
				
				<animation effect="rotate" end="90" time="0" center="50,5" condition="true">Conditional</animation>
				
			</control>
			
		</control>
		
		<control type="group">
			
			<posx>40</posx>
			<posy>40</posy>
			<width>60</width>
			<height>145</height>
			
			<visible>Player.HasMedia</visible>
			
			<control type="image">
				
				<posx>0</posx>
				<posy>0</posy>
				<width>500</width>
				<height>145</height>
				<texture>colors/color_white.png</texture>
				<colordiffuse>FanartDiffuse</colordiffuse>
				
			</control>
			
			<control type="image">
				
				<posx>14</posx>
				<posy>104</posy>
				<width>32</width>
				<height>32</height>
				<texture>kai/kai_volume.png</texture>
				<aspectratio>scale</aspectratio>
				
			</control>
			
			<control type="image">
				
				<posx>25</posx>
				<posy>20</posy>
				<width>10</width>
				<height>79</height>
				<texture>colors/color_grey.png</texture>
				
			</control>
			
			<control type="progress" id="32">
			
				<posx>-45</posx>
				<posy>-20</posy>
				<width>80</width>
				<height>10</height>
				<texturebg>colors/color_transparent.png</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>colors/color_white.png</midtexture>
				<righttexture>-</righttexture>
				<info>Player.Volume</info>
				<colordiffuse>Background_Highlight</colordiffuse>
				
				<animation effect="rotate" end="90" time="0" center="50,5" condition="true">Conditional</animation>
				
			</control>
			
			<control type="slider">

				<posx>-45</posx>
				<posy>-20</posy>
				<width>80</width>
				<height>10</height>
				<visible>true</visible>
				<texturesliderbar>colors/color_transparent.png</texturesliderbar>
				<textureslidernib>colors/color_white.png</textureslidernib>
				<textureslidernibfocus>colors/color_white.png</textureslidernibfocus>
				<info>Player.Volume</info>
				<action>volume</action>
				<controloffsetx></controloffsetx>
				<controloffsety></controloffsety>
				<pulseonselect></pulseonselect>
				
				<animation effect="rotate" end="90" time="0" center="50,5" condition="true">Conditional</animation>
				
			</control>
			
			<!--Player Info-->
			<control type="grouplist">
			
				<posx>60</posx>
				<posy>12</posy>
				<width>320</width>
				<height>120</height>
				<itemgap>0</itemgap>
				<orientation>vertical</orientation>
				
				<control type="textbox">
				
					<width>280</width>
					<height>42</height>
					<label>$VAR[NowPlaying_First_Label]</label>
					<font>NowPlaying-Header</font>
					<textcolor>Label_Normal</textcolor>
					<aligny>top</aligny>
				
				</control>
				
				<control type="textbox">
				
					<width>280</width>
					<height>16</height>
					<label>[UPPERCASE]$VAR[NowPlaying_Second_Label][/UPPERCASE]</label>
					<font>NowPlaying-Detail</font>
					<textcolor>Label_Normal</textcolor>
					<aligny>top</aligny>
					
				</control>
				
				<control type="label">
				
					<width>280</width>
					<height>16</height>
					<label>$VAR[NowPlaying_Third_Label]</label>
					<font>NowPlaying-Detail</font>
					<textcolor>Label_Normal</textcolor>
					<aligny>top</aligny>
					
				</control>
				
			</control>
			
			<!--Current Time-->
			<control type="label">
			
				<posx>60</posx>
				<posy>114</posy>
				<width>280</width>
				<height>16</height>
				<label>$INFO[Player.Time] / $INFO[Player.Duration]</label>
				<textcolor>Label_Normal</textcolor>
				<font>NowPlaying-Detail-Small</font>
				<aligny>center</aligny>
			
			</control>
			
			<control type="image">
				
				<posx>370</posx>
				<posy>15</posy>
				<width>115</width>
				<height>115</height>
				<texture>$VAR[NowPlaying_Image]</texture>
				<aspectratio aligny="center">scale</aspectratio>
				
			</control>
			
		</control>	
	
	</controls>

</window>