<includes>

	<include name="Common_Favourites_Properties">

		<posx>0</posx>
		<posy>60</posy>
		<height>480</height>
		<onup>450</onup>
		<ondown>450</ondown>
		<onleft>440</onleft>
		<onright>Control.Move(450,1)</onright>
		<onright>440</onright>
		<viewtype label="Details">panel</viewtype>
		<orientation>horizontal</orientation>
		<pagecontrol>459</pagecontrol>
		<focusposition>0</focusposition>
		<scrolltime tween="cubic" easing="out">600</scrolltime>
		<preloaditems>4</preloaditems>

		<include>Common_Animation_HideWhenScrolling</include>

	</include>

	<include name="Common_Favourites_Content">

		<itemlayout width="170" height="240">

			<control type="image">
			
				<posx>0</posx>
				<posy>0</posy>
				<width>150</width>
				<height>150</height>
				<texture background="true" fallback="colors/color_keyboard_dark.png">$INFO[ListItem.Thumb]</texture>
				<aspectratio>scale</aspectratio>
				
			</control>
			
			<control type="textbox">
				
				<posx>0</posx>
				<posy>160</posy>
				<width>150</width>
				<height>40</height>
				<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
				<font>Home-RecentWatched</font>
				<textcolor>Label_Normal</textcolor>
				<aligny>top</aligny>
				<wrapmultiline>true</wrapmultiline>
				<autoscroll>false</autoscroll>
				
			</control>
			
			<control type="textbox">
			
				<posx>0</posx>
				<posy>200</posy>
				<width>150</width>
				<height>22</height>
				<label>[UPPERCASE]$INFO[ListItem.Label2][/UPPERCASE]</label>
				<font>Home-RecentWatched-Small</font>
				<textcolor>Label_Normal</textcolor>
				<aligny>top</aligny>
				<wrapmultiline>true</wrapmultiline>
				<shadowcolor>00FFFFFF</shadowcolor>
				<autoscroll>false</autoscroll>
			
			</control>

		</itemlayout>

		<focusedlayout width="170" height="240">

			<control type="image">
			
				<posx>0</posx>
				<posy>0</posy>
				<width>150</width>
				<height>150</height>
				<texture background="true" fallback="colors/color_keyboard.png">$INFO[ListItem.Thumb]</texture>
				<aspectratio>scale</aspectratio>
				
			</control>
			
			<control type="textbox">
			
				<posx>0</posx>
				<posy>160</posy>
				<width>150</width>
				<height>40</height>
				<label>[UPPERCASE]$INFO[ListItem.Label][/UPPERCASE]</label>
				<font>Home-RecentWatched</font>
				<textcolor>Label_Highlight</textcolor>
				<aligny>top</aligny>
				<wrapmultiline>true</wrapmultiline>
				<shadowcolor>00FFFFFF</shadowcolor>
				<autoscroll>false</autoscroll>
				
			</control>
			
			<control type="textbox">
			
				<posx>0</posx>
				<posy>200</posy>
				<width>150</width>
				<height>22</height>
				<label>[UPPERCASE]$INFO[ListItem.Label2][/UPPERCASE]</label>
				<font>Home-RecentWatched-Small</font>
				<textcolor>Label_Highlight</textcolor>
				<aligny>top</aligny>
				<wrapmultiline>true</wrapmultiline>
				<shadowcolor>00FFFFFF</shadowcolor>
				<autoscroll>false</autoscroll>
			
			</control>

		</focusedlayout>

	</include>

</includes>