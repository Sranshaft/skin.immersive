<?xml version="1.0" encoding="UTF-8"?>

<window type="buttonMenu" id="111">
	
	
	<defaultcontrol always="true">3111</defaultcontrol>
	
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	
	<controls>
	
		<control type="image">
		
			<include>Common_Dimensions</include>
			<texture background="true">colors/color_white.png</texture>
			<colordiffuse>FanartDiffuse</colordiffuse>
			
			<include>Common_Animation_Window_Dark</include>
			
		</control>
	
		<control type="group">
			
			<posx>1280</posx>
			<posy>0</posy>
			<width>320</width>
			<height>720</height>
			
			<animation effect="slide" start="0,0" end="-320,0" time="400" tween="cubic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="-320,0" end="0,0" time="200" tween="cubic" easing="in">WindowClose</animation>
		
			<!--Background-->
			<control type="image">
			
				<posy>0</posy>
				<posy>0</posy>
				<width>320</width>
				<height>720</height>
				<texture background="true">colors/color_keyboard_dark.png</texture>		

			</control>
			
			<include>Common_ContextMenu_Header_Back</include>
			
			<control type="label">
	
				<include>Common_ContextMenu_Header</include>
				<label>Power</label>
				
			</control>
			
			<control type="grouplist" id="996">
				
				<description>grouplist for context buttons</description>
				<posx>0</posx>
				<posy>92</posy>
				<width>320</width>
				<height>600</height>
				<itemgap>0</itemgap>
				<onright>997</onright>
				
				<!--Exit Button-->
				<control type="button" id="3111">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[13012]</label>
					<onclick>XBMC.Quit()</onclick>
					
					<visible>System.ShowExitButton</visible>
					
				</control>

				<!--Master Button-->
				<control type="button" id="3112">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[20046]</label>
					<altlabel>$LOCALIZE[20045]</altlabel>
					<onclick>XBMC.MasterMode</onclick>
					
					<visible>System.HasLocks</visible>
					
				</control>

				<!--LogOff Button-->
				<control type="button" id="3113">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[20126] $INFO[System.ProfileName]</label>
					<onclick>Dialog.Close(all,true)</onclick>
					<onclick>System.LogOff</onclick>

					<visible>System.Loggedon + System.HasLoginScreen</visible>
					
				</control>

				<!--Cancel Custom Shutdown Timer Button-->
				<control type="button" id="3114">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[20151]</label>
					<onclick>XBMC.CancelAlarm(ShutDownTimer)</onclick>

					<visible>System.HasAlarm(ShutDownTimer)</visible>
					
				</control>

				<!--Custom Shutdown Timer Button-->
				<control type="button" id="3115">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[20150]</label>
					<onclick>XBMC.AlarmClock(ShutDownTimer,XBMC.ShutDown())</onclick>

					<visible>!System.HasAlarm(ShutDownTimer)</visible>
					
				</control>

				<!--Shutdown Button-->
				<control type="button" id="3116">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[13005]</label>
					<onclick condition="System.CanPowerDown">XBMC.PowerDown()</onclick>
					<onclick condition="!System.CanPowerDown">XBMC.ShutDown()</onclick>
					
				</control>

				<!--Suspend Button-->
				<control type="button" id="3117">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[13011]</label>
					<onclick>XBMC.Suspend()</onclick>
					
				</control>

				<!--Suspend Button-->
				<control type="button" id="3118">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[13013]</label>
					<onclick>XBMC.Reset()</onclick>
					
				</control>

				<!--Hibernate Button-->
				<control type="button" id="3119">
					
					<include>Common_ContextMenu_Button</include>
					<label>$LOCALIZE[13010]</label>
					<onclick>XBMC.Hibernate()</onclick>
					
				</control>
				
			</control>
			
		</control>	

	</controls>
	
</window>