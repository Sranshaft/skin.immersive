<!-- Foundation -->
<window id="2000">
	
	<defaultcontrol always="true">3</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	
	<controls>
	
		<control type="group">
			
			<posx>0</posx>
			<posy>0</posy>
			
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="400" delay="200" />
			</animation>
			
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="400" delay="200" />
			</animation>
			
			<visible>IntegerGreaterThan(Container(3).NumItems,0)</visible>
			
			<control type="image">
			
				<include>Common_Dimensions</include>
				<texture>colors/color_keyboard_dark.png</texture>
				
			</control>	
			
			<control type="label" id="1">
								
				<posx>32</posx>
				<posy>20</posy>
				<width min="20" max="1216">auto</width>
				<height>30</height>
				<font>Select-Large</font>
				<textcolor>Label_Normal</textcolor>
				<aligny>top</aligny>
				
			</control>
			
			<control type="label" id="20">
								
				<posx>32</posx>
				<posy>60</posy>
				<width min="20" max="1216">auto</width>
				<height>30</height>
				<label>$INFO[Container(3).NumItems] items</label>
				<font>Select-Small</font>
				<textcolor>Label_Normal</textcolor>
				<aligny>top</aligny>
				
			</control>
	
			<control type="list" id="3">
						
				<posx>0</posx>
				<posy>90</posy>
				<width>1240</width>
				<height>600</height>
				<onup>3</onup>
				<ondown>3</ondown>
				<onright>5</onright>
				<pagecontrol>60</pagecontrol>
				<viewtype label="List">list</viewtype>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				
				<animation type="WindowOpen">
					<effect type="fade" start="0" end="100" time="400" delay="200" />
					<effect type="slide" start="100,0" end="0,0" time="400" delay="200" tween="cubic" easing="out" />
				</animation>
				
				<itemlayout width="1240" height="50">

					<control type="label">
					
						<posx>32</posx>
						<posy>0</posy>
						<width min="20" max="1216">auto</width>
						<height>50</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Menu-List</font>
						<textcolor>Label_Normal</textcolor>
						<selectedcolor>Background_Highlight</selectedcolor>
						<aligny>center</aligny>
						
					</control>
					
				</itemlayout>

				<focusedlayout width="1240" height="50">
				
					<control type="label">
					
						<posx>32</posx>
						<posy>0</posy>
						<width min="20" max="1216">auto</width>
						<height>50</height>
						<label>$INFO[ListItem.Label]</label>
						<font>Menu-List</font>
						<textcolor>Background_Highlight</textcolor>
						<selectedcolor>Background_Highlight</selectedcolor>
						<aligny>center</aligny>
						
					</control>
					
				</focusedlayout>

			</control>
			
			<!--Scrollbar-->
			<control type="scrollbar" id="60">
				
				<posx>1260</posx>
				<posy>90</posy>
				<height>600</height>
				
				<include>Common_Scrollbar_Vertical</include>
				
				<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(3).Scrolling">Conditional</animation>
				
			</control>
			
		</control>	
			
		<control type="group">

			<visible>IntegerGreaterThan(Container(6).NumItems,0)</visible>
			
			<include>Common_Animation_Window</include>

			<control type="image">
			
				<include>Common_Dimensions</include>
				<texture background="true">colors/color_white.png</texture>
				<colordiffuse>Settings_Background_Light</colordiffuse>
				
			</control>
		
			<include>Common_Breadcrumb_Dark</include>
			
			<control type="button" id="5">
				
				<include>Common_AppBar_Button_Small</include>
				<posx>800</posx>
				<posy>60</posy>
				<texturefocus>dialoginfo/dialoginfo_add.png</texturefocus>
				<texturenofocus>dialoginfo/dialoginfo_add</texturenofocus>
				<onup>SetFocus(6)</onup>
				<ondown>SetFocus(6)</ondown>
				
			</control>

			<!--Control Section-->
			<control type="group">
				
				<posx>60</posx>
				<posy>100</posy>
				<width>1220</width>
				<height>480</height>
				
				<!--Animation-->
				<include>Common_Animation_Content</include>
				
				<control type="label">
						
					<label>explore</label>
					<include>Common_Section_Label_Dark</include>
					
				</control>
				
				<control type="panel" id="6">
					
					<posx>0</posx>
					<posy>60</posy>
					<width>1220</width>
					<height>500</height>
					<onleft>6</onleft>
					<onright>6</onright>
					<onup>5</onup>
					<ondown>-</ondown>
					<pagecontrol>9010</pagecontrol>
					<scrolltime tween="cubic" easing="out">600</scrolltime>
					<orientation>horizontal</orientation>
					<preloaditems>4</preloaditems>

					<itemlayout width="440" height="125">

						<control type="image">
							
							<width>420</width>
							<height>105</height>
							<texture border="2">colors/color_white.png</texture>
							<colordiffuse>Settings_Background_Dark</colordiffuse>
							
						</control>
						
						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>105</width>
							<height>105</height>
							<texture>colors/color_keyboard_dark.png</texture>
							
						</control>

						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>105</width>
							<height>105</height>
							<texture fallback="colors/color_keyboard_dark.png">$INFO[ListItem.Icon]</texture>
							<aspectratio>scale</aspectratio>
							
						</control>

						<control type="textbox">
							
							<posx>125</posx>
							<posy>10</posy>
							<width>275</width>
							<height>60</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Select-Normal</font>
							<textcolor>Settings_Menu_Normal</textcolor>
							<aligny>top</aligny>
							<wrapmultiline>true</wrapmultiline>
							<autoscroll>0</autoscroll>
							
						</control>
						
						<control type="textbox">
							
							<posx>125</posx>
							<posy>64</posy>
							<width>275</width>
							<height>20</height>
							<label>$INFO[ListItem.Label2]</label>
							<font>Select-Small</font>
							<textcolor>Settings_Menu_Normal</textcolor>
							<aligny>top</aligny>
							<wrapmultiline>true</wrapmultiline>
							<autoscroll>0</autoscroll>
							
						</control>

					</itemlayout>

					<focusedlayout width="440" height="125">

						<control type="image">
							
							<width>420</width>
							<height>105</height>
							<texture border="2">colors/color_white.png</texture>
							<colordiffuse>Background_Highlight</colordiffuse>
							
						</control>
						
						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>105</width>
							<height>105</height>
							<texture>colors/color_keyboard_dark.png</texture>
							
						</control>

						<control type="image">
						
							<posx>0</posx>
							<posy>0</posy>
							<width>105</width>
							<height>105</height>
							<texture fallback="colors/color_keyboard_dark.png">$INFO[ListItem.Icon]</texture>
							<aspectratio>scale</aspectratio>
							
						</control>

						<control type="textbox">
							
							<posx>125</posx>
							<posy>10</posy>
							<width>275</width>
							<height>60</height>
							<label>$INFO[ListItem.Label]</label>
							<font>Select-Normal</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>top</aligny>
							<wrapmultiline>true</wrapmultiline>
							<autoscroll>0</autoscroll>
							
						</control>
						
						<control type="textbox">
							
							<posx>125</posx>
							<posy>64</posy>
							<width>275</width>
							<height>20</height>
							<label>$INFO[ListItem.Label2]</label>
							<font>Select-Small</font>
							<textcolor>Label_Normal</textcolor>
							<aligny>top</aligny>
							<wrapmultiline>true</wrapmultiline>
							<autoscroll>0</autoscroll>
							
						</control>

					</focusedlayout>

				</control>
				
			</control>
			
			<!--Scrollbar-->
			<control type="group">
				
				<control type="scrollbar" id="9010">
				
					<include>Common_Window_Scrollbar_Horizontal_Dark</include>
					<posy>700</posy>
					
					<include>Common_Animation_Window_Scrollbar_Fade</include>
					
				</control>
				
			</control>
			
		</control>	
		
		<control type="label" id="1">
			<visible>false</visible>
			<label>$LOCALIZE[13406]</label>
		</control>
		
		<control type="label" id="2">
			<visible>false</visible>
		</control>
		
	</controls>

</window>