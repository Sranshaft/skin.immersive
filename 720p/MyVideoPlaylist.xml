<?xml version="1.0" encoding="UTF-8"?>

<window id="6">

	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<onload>Skin.Reset(ShowAppBar)</onload>
	<onunload>Skin.Reset(ShowAppBar)</onunload>
	
	<controls>

		<!--Background Area-->
		<include>Common_Background</include>

		<!--Top Area-->
		<include>Common_Breadcrumb</include>
		<include>Common_Clock</include>
		<include>Common_Overlay</include>
		
		<!--Content Area-->
		<control type="group">
		
			<posx>0</posx>
			<posy>100</posy>
			<width>1280</width>
			<height>480</height>
			
			<!--Animation-->
			<include>Common_Animation_Content</include>
			
			<control type="grouplist">
			
				<include>Common_Content_Grouplist</include>

				<!--Playlist list-->
				<include>Common_Playlist_Queue</include>

				<!--Now Playing Infomation-->
				<include>Common_Playlist_Player</include>

			</control>

		</control>	

		<include>Common_AppBar</include>

	</controls>

</window>