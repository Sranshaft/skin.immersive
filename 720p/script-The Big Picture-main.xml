<window type="window">

	<!--Splash Screen-->
	<onload condition="!Skin.HasSetting(NoSplashScreen)">ActivateWindow(60)</onload>
	
	<include>Common_Animation_Window_Splash</include>

    <controls>
	
        <control type="label" id="104">
        
			<description>Arrows visibility-controller</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>0</width>
            <height>0</height>
			
        </control>
    
		<control type="label" id="103">
            
			<description>AspectRatio-controller</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>0</width>
            <height>0</height>
			
        </control>
		
        <control type="label" id="102">
            
			<description>Infolabels visibility-controller</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>0</width>
            <height>0</height>
			
        </control>
       
		<control type="image" id="105">
        
			<description>Main background</description>
            <include>Common_Dimensions</include>
            <texture>black.png</texture>
        
		</control>
        
		<control type="image" id="101">
            
			<description>Busy animation</description>
			<posx>576</posx>
			<posy>296</posy>
			<width>128</width>
			<height>128</height>
			<texture>buffer/buffer_progress.png</texture>
			<aspectratio>keep</aspectratio>
			
			<visible>!IntegerGreaterThan(Container(100).NumPages,0) | ![Container(100).OnNext | Container(100).OnPrevious]</visible>
			
			<animation effect="rotate" end="-360" center="640,360" time="1200" loop="true" condition="true">Conditional</animation>
			
			<animation type="Visible">
				<effect type="fade" start="0" end="100" time="400" />
			</animation>
			
			<animation type="Hidden">
				<effect type="fade" start="100" end="0" time="400" delay="400" />
			</animation>
				
		</control>
			
		<control type="list" id="100">
        
			<description>List of Images</description>
            <include>Common_Dimensions</include>
            <scrolltime tween="cubic" easing="out">600</scrolltime>
            <orientation>horizontal</orientation>
            <preloaditems>2</preloaditems>
            
			<itemlayout width="1280" height="720">
                
				<control type="largeimage">
                    
					<description>Picture in ratio keep (default)</description>
                    <include>Common_Dimensions</include>
                    <texture background="true">$INFO[ListItem.Icon]</texture>
                    <aspectratio>scale</aspectratio>
					
					<visible>!Control.IsVisible(103)</visible>
					
                </control>
				
				<control type="largeimage">
                    
					<description>Picture in ratio keep (default)</description>
                    <include>Common_Dimensions</include>
                    <texture background="true">$INFO[ListItem.Icon]</texture>
                    <aspectratio>keep</aspectratio>
					
					<visible>Control.IsVisible(103)</visible>
					
                </control>
				
				<control type="image">
                        
					<description>Description background</description>
					<include>Common_Dimensions</include>
					<texture background="true">weather/weather_overlay.png</texture>
					
				</control>
				
            </itemlayout>
            
			<focusedlayout width="1280" height="720">
                
				<control type="largeimage">
                    
					<description>Picture in ratio keep (default)</description>
                    <include>Common_Dimensions</include>
                    <texture background="true">$INFO[ListItem.Icon]</texture>
                   <aspectratio>scale</aspectratio>
					
					<visible>!Control.IsVisible(103)</visible>
					
                </control>
				
				<control type="largeimage">
                    
					<description>Picture in ratio keep (default)</description>
                    <include>Common_Dimensions</include>
                    <texture background="true">$INFO[ListItem.Icon]</texture>
                    <aspectratio>keep</aspectratio>
					
					<visible>Control.IsVisible(103)</visible>
					
                </control>
				
				<control type="image">
                        
					<description>Description background</description>
					<include>Common_Dimensions</include>
					<texture background="true">weather/weather_overlay.png</texture>
					
				</control>
				
            </focusedlayout>
			
        </control>
		
		<!--Information Area-->
		<control type="group">
		
			<visible>!System.IdleTime(30)</visible>
		
			<animation type="Visible">
				<effect type="fade" start="0" end="100" time="400" />
			</animation>
			
			<animation type="Hidden">
				<effect type="fade" start="100" end="0" time="400" delay="400" />
			</animation>
			
			<control type="image">
					
				<include>Common_Dimensions</include>
				<texture>overlays/overlay_fullscreen_top.png</texture>
				
			</control>
			
			<!--Top Area-->
			<include>Common_Breadcrumb_Alt</include>
			
			<control type="group">
			
				<!--Left Scroll Image-->
				<control type="image">
				
					<posx>0</posx>
					<posy>320</posy>
					<width>100</width>
					<height>48</height>
					<texture>controls/control_image_left.png</texture>
					
					<visible>Control.IsVisible(104) + IntegerGreaterThan(Container(100).NumPages,0) + !StringCompare(Container(100).CurrentPage,1) + !System.IdleTime(30)</visible>
					
					<animation type="Visible">
						<effect type="fade" start="0" end="100" time="400" />
					</animation>
					
					<animation type="Hidden">
						<effect type="fade" start="100" end="0" time="400" delay="400" />
					</animation>
					
					<animation type="Conditional" condition="System.IdleTime(10)">
						<effect type="fade" start="100" end="80" time="400" />
					</animation>
					
				</control>
				
				<!--Right Scroll Image-->
				<control type="image">
				
					<posx>1180</posx>
					<posy>320</posy>
					<width>100</width>
					<height>48</height>
					<texture>controls/control_image_right.png</texture>
					
					<visible>Control.IsVisible(104) + IntegerGreaterThan(Container(100).NumPages,0) + !StringCompare(Container(100).CurrentPage,Container(100).NumPages) + !System.IdleTime(30)</visible>
					
					<animation type="Visible">
						<effect type="fade" start="0" end="100" time="400" />
					</animation>
					
					<animation type="Hidden">
						<effect type="fade" start="100" end="0" time="400" delay="400" />
					</animation>
					
					<animation type="Conditional" condition="System.IdleTime(10)">
						<effect type="fade" start="100" end="80" time="400" />
					</animation>
					
				</control>
				
			</control>	
			
			<!--Bottom Area-->
			<control type="group">
			
				<visible>System.IdleTime(5) + !System.IdleTime(30) + Control.IsVisible(102)</visible>
				
				<animation type="Visible">
					<effect type="fade" start="0" end="100" time="400" delay="1000" />
					<effect type="slide" start="0,400" end="0,0" time="600" delay="1000" tween="cubic" easing="out" />
				</animation>
				
				<animation type="Hidden">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
				
				<control type="image">
                        
					<include>Common_Dimensions</include>
					<texture>overlays/overlay_fullscreen_bottom.png</texture>
					
				</control>
				
				<control type="image">
				
					<posx>60</posx>
					<posy>430</posy>
					<width>300</width>
					<height>10</height>
					<texture>colors/color_white.png</texture>
					<colordiffuse>Background_Highlight</colordiffuse>
					
				</control>
				
				<control type="textbox">
					
					<description>Label for album or picture title</description>
					<posx>60</posx>
					<posy>450</posy>
					<width>800</width>
					<height>110</height>
					<align>left</align>
					<aligny>top</aligny>
					<label>$INFO[Container(100).ListItem.Label]</label>
					<font>BigPicture-PhotoName</font>
					<textcolor>white</textcolor>
					<shadowcolor>00FFFFFF</shadowcolor>
					
				</control>
				
				<control type="textbox">
						
					<description>Description text</description>
					<posx>60</posx>
					<posy>570</posy>
					<width>700</width>
					<height>88</height>
					<label>$INFO[Container(100).ListItem.Label2]</label>
					<font>BigPicture-Description</font>
					<textcolor>white</textcolor>
					<shadowcolor>00FFFFFF</shadowcolor>
					<align>left</align>
					<aligny>top</aligny>
					<autoscroll delay="10000" time="1000" repeat="10000">Control.HasFocus(100)</autoscroll>
					<wrapmultiline>true</wrapmultiline>
					
				</control>
				
			</control>
			
		</control>
		
    </controls>
	
</window>
