<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="Common_LiveTile">
	
		<!--Top Tile-->
		<control type="group">
		
			<posx>320</posx>
			<posy>40</posy>
			<width>210</width>
			<height>210</height>
			
			<include>Common_Animation_HideWhenScrolling</include>
			<include>Common_Animation_LiveTile_Background</include>
			<include>Common_LiveTile_Background</include>
			
		</control>
		
		<!--Front Side Info-->
		<control type="group">
		
			<posx>320</posx>
			<posy>40</posy>
			<width>210</width>
			<height>210</height>
			
			<include>Common_Animation_LiveTile_Front</include>
			
			<control type="label">
				
				<include>Common_LiveTile_Header</include>
				<label>$VAR[Tile_Top_Header]</label>
				
			</control>
			
			<control type="label">
			
				<include>Common_LiveTile_Detail</include>
				<label>$VAR[Tile_Top_Detail]</label>
				<visible>![Container.Content(movies) + ListItem.IsFolder]</visible>
			
			</control>
			
			<control type="image">
			
				<posx>0</posx>
				<posy>0</posy>
				<width>210</width>
				<height>210</height>
				<texture>DefaultBoxset.png</texture>
				<visible>[Container.Content(movies) + ListItem.IsFolder] | StringCompare(Container.FolderPath,videodb://1/7/)</visible>
				
			</control>
			
		</control>
		
		<!--Back Side Info-->
		<control type="group">
		
			<posx>320</posx>
			<posy>40</posy>
			<width>210</width>
			<height>210</height>
			
			<include>Common_Animation_LiveTile_Back</include>
			
			<control type="image">
			
				<include>Common_LiveTile_Rating</include>
				<visible>System.IdleTime(2)</visible>
				
			</control>
			
			<control type="textbox">
				
				<include>Common_LiveTile_Description</include>
				<label>$VAR[Tile_Description]</label>
				<visible>System.IdleTime(2)</visible>
	
			</control>
			
		</control>
		
		<!--Bottom Tile-->
		<control type="group">
		
			<posx>320</posx>
			<posy>270</posy>
			<width>210</width>
			<height>210</height>
			
			<include>Common_Animation_HideWhenScrolling</include>
			<include>Common_LiveTile_Background</include>
			
			<control type="image">
			
				<posx>0</posx>
				<posy>0</posy>
				<width>210</width>
				<height>210</height>
				<texture background="true">$VAR[Fanart_Image]</texture>
				<aspectratio>scale</aspectratio>
				<fadetime>1000</fadetime>
				
			</control>
			
			<control type="multiimage">
			
				<posx>0</posx>
				<posy>0</posy>
				<width>210</width>
				<height>210</height>
				<imagepath>special://skin/media/tile/,.png</imagepath>
				<timeperimage>2000</timeperimage>
				<fadetime>1000</fadetime>
				<randomize>true</randomize>
				
			</control>
			
		</control>
		
	</include>
	
	<include name="Common_LiveTile_Rating">
	
		<posx>20</posx>
		<posy>20</posy>
		<width>128</width>
		<height>32</height>
		<texture>$VAR[Tile_StarRating]</texture>
		
	</include>
	
	<include name="Common_LiveTile_Image">
	
		<posx>0</posx>
		<posy>0</posy>
		<width>210</width>
		<height>210</height>
		
	</include>
	
	<!--Square Live Tile-->
	
	<include name="Common_LiveTile_Background">
	
		<control type="image">
			
			<posx>0</posx>
			<posy>0</posy>
			<width>210</width>
			<height>210</height>
			<texture>colors/color_white.png</texture>
			<colordiffuse>Tile_Background</colordiffuse>
			
		</control>
	
	</include>
	
	<include name="Common_LiveTile_Header">
	
		<posx>20</posx>
		<posy>156</posy>
		<width>170</width>
		<height>52</height>
		<textcolor>Tile_Text</textcolor>
		<font>Tile-Header</font>
		<aligny>center</aligny>
		
	</include>
	
	<include name="Common_LiveTile_Detail">
	
		<posx>20r</posx>
		<posy>0</posy>
		<width>170</width>
		<height>40</height>
		<textcolor>Tile_Text</textcolor>
		<font>Tile-Detail</font>
		<align>right</align>
		<aligny>top</aligny>
		
	</include>
	
	<include name="Common_LiveTile_Description">
	
		<posx>20</posx>
		<posy>60</posy>
		<width>170</width>
		<height>130</height>
		<textcolor>Tile_Text</textcolor>
		<font>Tile-Description</font>
		<align>left</align>
		<aligny>top</aligny>
		<shadowcolor>00FFFFFF</shadowcolor>
		
	</include>
	
	<include name="Common_LiveTile_Image">
	
		<posx>0</posx>
		<posy>0</posy>
		<width>210</width>
		<height>210</height>
		
	</include>
	
	<!--Wide Live Tile-->
	
	<include name="Common_LiveTile_Background_Wide">
	
		<control type="image">
			
			<posx>0</posx>
			<posy>0</posy>
			<width>370</width>
			<height>210</height>
			<texture>colors/color_keyboard_dark.png</texture>
			
		</control>
	
	</include>
	
	<include name="Common_LiveTile_Header_Wide">
	
		<posx>20</posx>
		<posy>156</posy>
		<width>320</width>
		<height>52</height>
		<textcolor>Tile_Text</textcolor>
		<font>Tile-Header</font>
		<aligny>center</aligny>
		
	</include>
	
	<include name="Common_LiveTile_Description_Wide">
	
		<posx>20</posx>
		<posy>60</posy>
		<width>330</width>
		<height>110</height>
		<textcolor>Tile_Text</textcolor>
		<font>Tile-Description</font>
		<align>left</align>
		<aligny>top</aligny>
		<shadowcolor>00FFFFFF</shadowcolor>
		
	</include>

</includes>				