<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="ViewList">
	
		<control type="grouplist">
		
			<include>Common_Content_Grouplist</include>
			<include>Common_Animation_View</include>
			
			<visible>Control.IsVisible(50) + IsEmpty(Control.GetLabel(18))</visible>
			
			<control type="group">
			
				<posx>60</posx>
				<posy>0</posy>
				<width>700</width>
				<height>480</height>
				
				<control type="label">
							
					<posx>45</posx>
					<posy>58</posy>
					<label>EXPLORE</label>
					<textcolor>Label_Normal</textcolor>
					<include>Common_Vertical_Label</include>
					
					<include>Common_Animation_Vertical_Label</include>
					
				</control>

				<control type="list" id="50">
								
					<posx>50</posx>
					<posy>60</posy>
					<width>640</width>
					<height>460</height>
					<onright>9000</onright>
					<onleft>10000</onleft>
					<onup>50</onup>
					<ondown>50</ondown>
					<pagecontrol>60</pagecontrol>
					<viewtype label="List">list</viewtype>
					<scrolltime tween="cubic" easing="out">600</scrolltime>
					<preloaditems>2</preloaditems>
					
					<itemlayout width="640" height="92">

						<include>Common_View_List</include>

					</itemlayout>

					<focusedlayout width="640" height="92">

						<control type="image">
						
							<posx>72</posx>
							<posy>0</posy>
							<width>580</width>
							<height>72</height>
							<texture>colors/color_keyboard.png</texture>

							<visible>!Control.HasFocus(50)</visible>

						</control>

						<control type="image">
							
							<posx>72</posx>
							<posy>0</posy>
							<width>580</width>
							<height>72</height>
							<texture>colors/color_white.png</texture>
							<colordiffuse>Background_Highlight</colordiffuse>

							<visible>Control.HasFocus(50)</visible>

						</control>

						<include>Common_View_List</include>
					
					</focusedlayout>

				</control>	
				
				<!--Scrollbar-->
				<control type="scrollbar" id="60">
					
					<posx>700</posx>
					<posy>60</posy>
					<height>440</height>
					<onleft>50</onleft>
					<onright>9001</onright>
					
					<include>Common_Scrollbar_Vertical</include>
					
					<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(50).Scrolling">Conditional</animation>
					
				</control>
				
			</control>
			
			<include>ViewList_Overview</include>
			
		</control>
		
	</include>
	
	<include name="ViewList_Overview">
	
		<!--Description Area-->
		<control type="group">
			
			<posx>0</posx>
			<posy>0</posy>
			<width>400</width>
			<height>460</height>
			
			<control type="label">
					
				<label>overview</label>
				<include>Common_Section_Label</include>
				
			</control>
		
			<control type="textbox">
						
				<posx>0</posx>
				<posy>50</posy>
				<width>400</width>
				<height>450</height>
				<label>$VAR[View_Item_Description]</label>
				<font>Menu-ExtendedList-Details</font>
				<textcolor>Label_Normal</textcolor>
				<aligny>top</aligny>
				
			</control>
			
		</control>
			
	</include>
	
</includes>
