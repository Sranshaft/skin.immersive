				</control>

				<control type="label">
					
					<description>Profile Directory</description>
					<posx>80</posx>
					<posy>30</posy>
					<width>300</width>
					<label>$INFO[ListItem.Label2]</label>
					<font>Profile-Settings-Directory</font>
					<textcolor>Label_Normal</textcolor>
					
				</control>

			</itemlayout>

			<focusedlayout height="120" width="400">

				<control type="image">
				
					<description>profile image</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>100</width>
					<height>100</height>
					<texture>$INFO[ListItem.Thumb]</texture>
					<aspectratio>scale</aspectratio>
					
				</control>

				<control type="label">
					
					<description>Profile Name</description>
					<posx>120</posx>
					<posy>0</posy>
					<width>300</width>
					<label>$INFO[ListItem.Label]</label>
					<font>Profile-Settings-Name</font>
					<textcolor>Label_Highlight</textcolor>
					
				</control>

				<control type="label">
					
					<description>Profile Directory</description>
					<posx>120</posx>
					<posy>30</posy>
					<width>300</width>
					<label>$INFO[ListItem.Label2]</label>
					<font>Profile-Settings-Directory</font>
					<textcolor>Label_Normal</textcolor>
					
				</control>

			</focusedlayout>

		</control>
		
		<control type="button" id="99">
		
			<posx>1180</posx>
			<posy>620</posy>
			<width>48</width>
			<height>48</height>
			<texturefocus>colors/color_keyboard.png</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onup>52</onup>
			<onleft>52</onleft>
			<onright>52</onright>
			<ondown>52</ondown>
			<onclick>SetFocus(10001)</onclick>
			
		</control>
		
		<control type="image">
		
			<posx>1180</posx>
			<posy>620</posy>
			<width>48</width>
			<height>48</height>
			<texture>charms/charm_shutdown.png</texture>
			
		</control>
		
		<control type="list" id="10001">
						
			<posx>1140</posx>
			<posy>440</posy>
			<width>120</width>
			<height>160</height>
			<onup>10001</onup>
			<ondown>10001</ondown>
			<onleft>52</onleft>
			<onright>52</onright>
			<viewtype label="List">list</viewtype>
			<scrolltime tween="Cubic " easing="inout">200</scrolltime>
			<preloaditems>2</preloaditems>
			
			<visible allowhiddenfocus="true">Control.HasFocus(10001)</visible>
			
			<animation effect="fade" start="0" end="100" time="200" reversible="true">Visible</animation>
			
