			<posx>440</posx>
			<posy>180</posy>
			<width>400</width>
			<height>360</height>
			<onup>300</onup>
			<ondown>300</ondown>
			<onleft>300</onleft>
			<onright>99</onright>
			<focusposition>0</focusposition>
