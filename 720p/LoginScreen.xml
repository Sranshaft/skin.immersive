		<control type="image">
		
			<posx>1140</posx>
			<posy>440</posy>
			<width>120</width>
			<height>160</height>
			<texture border="4">button_unfocus.png</texture>
			<colordiffuse>Black</colordiffuse>
			
			<visible>Control.HasFocus(10001)</visible>
			
			<animation effect="fade" start="0" end="100" time="200" reversible="true">Visible</animation>
			
		</control>	

