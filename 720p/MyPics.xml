<?xml version="1.0" encoding="UTF-8"?>

<window id="2">

	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<views>50,51,52,53,54,57</views>
	
	<!--Splash Screen-->
	<onload condition="!Skin.HasSetting(NoSplashScreen)">ActivateWindow(60)</onload>

	<onload>Skin.Reset(ShowAppBar)</onload>
	<onunload>Skin.Reset(ShowAppBar)</onunload>
	
	<controls>

		<!--Background Area-->
		<include>Common_Background</include>
		
		<control type="group">
		
			<include>Common_Dimensions</include>
			<include>Common_Animation_Window</include>
		
			<!--Top Area-->
			<include>Common_Breadcrumb</include>
			<include>Common_Clock</include>
			<include>Common_Overlay</include>
			
			<!--Content Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>100</posy>
				<width>1280</width>
				<height>480</height>
				
				<!--Animation-->
				<include>Common_Animation_Content_Splash</include>
				
				<!--Available Views-->
				<include>ViewList</include>
				<include>ViewThumbnail</include>
				<include>ViewTall</include>
				<include>ViewSquare</include>
			
			</control>
			
			<!--Bottom Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>620</posy>
				<width>1280</width>
				<height>100</height>
			
				<include>Common_Bottom</include>
				
			</control>	
			
			<!--Context Menu-->
			<include>Common_AppBar</include>
			
		</control>	
	
	</controls>

</window>