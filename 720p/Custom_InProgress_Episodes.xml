<?xml version="1.0" encoding="UTF-8"?>

<window id="64">

	<defaultcontrol always="true">50</defaultcontrol>
	
	<zorder>2</zorder>
	
	<include>Common_Animation_Window</include>

	<controls>

		<!--Background Area-->
		<include>Common_Background</include>
		
		<control type="group">
		
			<include>Common_Dimensions</include>
			<include>Common_Animation_Window</include>
		
			<!--Top Area-->
			<include>Common_Breadcrumb</include>
			<include>Common_Clock</include>
			<include>Common_Overlay</include>
			
			<!--Content Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>100</posy>
				<width>1280</width>
				<height>480</height>
				
				<!--Animation-->
				<include>Common_Animation_Content</include>

				<control type="group">
				
					<posx>60</posx>
					<posy>0</posy>
				
					<visible>Control.IsVisible(50)</visible>
					
					<include>Common_Animation_View</include>
				
					<control type="label">
						
						<width>1000</width>
						<label>[LOWERCASE]explore[/LOWERCASE]</label>
						<include>Common_Section_Label</include>
						
					</control>

					<control type="image">
						
						<posx>0</posx>
						<posy>60</posy>
						<width>300</width>
						<height>440</height>
						<texture background="true" fallback="colors/color_keyboard_dark.png">$INFO[Container(50).ListItem.Art(tvshow.poster)]</texture>
						<fadetime>400</fadetime>
						<aspectratio>stretch</aspectratio>
						
					</control>

					<control type="fixedlist" id="50">
						
						<posx>320</posx>
						<posy>20</posy>
						<width>1000</width>
						<height>480</height>
						<onright>50</onright>
						<onleft>50</onleft>
						<pagecontrol>60</pagecontrol>
						<viewtype label="Extended">wrap</viewtype>
						<orientation>horizontal</orientation>
						<focusposition>0</focusposition>
						<scrolltime tween="cubic" easing="out">600</scrolltime>
						<preloaditems>2</preloaditems>
						
						<include>Common_Animation_HideWhenScrolling</include>
						
						<itemlayout width="320" height="480">
						
							<control type="group">
							
								<posx>0</posx>
								<posy>40</posy>
								<width>300</width>
								<height>440</height>
								
								<control type="image">
								
									<posx>0</posx>
									<posy>0</posy>
									<width>300</width>
									<height>440</height>
									<texture background="true">colors/color_white.png</texture>
									<colordiffuse>Settings_Background_Dark</colordiffuse>
									
								</control>
								
								<control type="image">
								
									<posx>0</posx>
									<posy>0</posy>
									<width>300</width>
									<height>170</height>
									<texture background="true" fallback="fallbacks/fallback_tv.png">$INFO[ListItem.Art(thumb)]</texture>
									<aspectratio aligny="top">scale</aspectratio>
									
								</control>
								
								<control type="textbox">
								
									<posx>20</posx>
									<posy>180</posy>
									<width>260</width>
									<height>60</height>
									<label>$VAR[InProgress_Header]</label>
									<font>Menu-ExtendedList-Header</font>
									<textcolor>Settings_Label</textcolor>
									<aligny>top</aligny>
									<shadowcolor>00FFFFFF</shadowcolor>
									<autoscroll>false</autoscroll>
									
								</control>
								
								<control type="image">
								
									<posx>20</posx>
									<posy>248</posy>
									<width>100</width>
									<height>20</height>
									<texture background="true">$INFO[ListItem.StarRating]</texture>
									<colordiffuse>Settings_Label</colordiffuse>
									<aspectratio>scale</aspectratio>
									
								</control>
								
								<control type="textbox">
								
									<posx>20</posx>
									<posy>270</posy>
									<width>260</width>
									<height>125</height>
									<label>$INFO[ListItem.Plot]</label>
									<font>Menu-ExtendedList-Details</font>
									<textcolor>Settings_Label</textcolor>
									<aligny>top</aligny>
									<wrapmultiline>true</wrapmultiline>
									<autoscroll>false</autoscroll>
									
								</control>
								
								<control type="label">
								
									<posx>20</posx>
									<posy>400</posy>
									<width>240</width>
									<height>26</height>
									<label>$INFO[ListItem.LastPlayed,Last played on ,]</label>
									<font>Menu-ExtendedList-Small</font>
									<textcolor>Settings_Label</textcolor>
									<aligny>center</aligny>
									
								</control>
								
								<control type="image">
									
									<posx>250</posx>
									<posy>394</posy>
									<width>40</width>
									<height>40</height>
									<texture>$VAR[View_Item_Overlay]</texture>
									<aspectratio>stretch</aspectratio>
									<colordiffuse>Settings_Label</colordiffuse>
									
								</control>
								
							</control>	
							
						</itemlayout>

						<focusedlayout width="320" height="480">
						
							<control type="group">
							
								<posx>0</posx>
								<posy>40</posy>
								<width>300</width>
								<height>440</height>
								
								<control type="image">
								
									<posx>0</posx>
									<posy>0</posy>
									<width>300</width>
									<height>440</height>
									<texture background="true">colors/color_white.png</texture>
									<colordiffuse>Label_Highlight</colordiffuse>
									
								</control>
								
								<control type="image">
								
									<posx>0</posx>
									<posy>0</posy>
									<width>300</width>
									<height>170</height>
									<texture background="true" fallback="fallbacks/fallback_tv.png">$INFO[ListItem.Art(thumb)]</texture>
									<aspectratio aligny="top">scale</aspectratio>
									
								</control>
								
								<control type="textbox">
								
									<posx>20</posx>
									<posy>180</posy>
									<width>260</width>
									<height>60</height>
									<label>$VAR[InProgress_Header]</label>
									<font>Menu-ExtendedList-Header</font>
									<textcolor>Label_Normal</textcolor>
									<aligny>top</aligny>
									<shadowcolor>00FFFFFF</shadowcolor>
									<autoscroll>false</autoscroll>
									
								</control>
								
								<control type="image">
								
									<posx>20</posx>
									<posy>248</posy>
									<width>100</width>
									<height>20</height>
									<texture background="true">$INFO[ListItem.StarRating]</texture>
									<colordiffuse>Label_Normal</colordiffuse>
									<aspectratio>scale</aspectratio>
									
								</control>
								
								<control type="textbox">
								
									<posx>20</posx>
									<posy>270</posy>
									<width>260</width>
									<height>125</height>
									<label>$INFO[ListItem.Plot]</label>
									<font>Menu-ExtendedList-Details</font>
									<textcolor>Label_Normal</textcolor>
									<aligny>top</aligny>
									<wrapmultiline>true</wrapmultiline>
									<shadowcolor>00FFFFFF</shadowcolor>
									<autoscroll>false</autoscroll>
									
								</control>
								
								<control type="label">
								
									<posx>20</posx>
									<posy>400</posy>
									<width>240</width>
									<height>26</height>
									<label>$INFO[ListItem.LastPlayed,Last played on ,]</label>
									<font>Menu-ExtendedList-Small</font>
									<textcolor>Label_Normal</textcolor>
									<aligny>center</aligny>
									
								</control>
								
								<control type="label">
								
									<posx>250</posx>
									<posy>400</posy>
									<width>260</width>
									<height>26</height>
									<label>$INFO[ListItem.Property(UnWatchedEpisodes)]</label>
									<font>Menu-ExtendedList-Small</font>
									<textcolor>Label_Normal</textcolor>
									<align>right</align>
									<aligny>center</aligny>
									
									<visible>!StringCompare(ListItem.Property(UnWatchedEpisodes),0)</visible>
									
								</control>
								
								<control type="image">
									
									<posx>250</posx>
									<posy>394</posy>
									<width>40</width>
									<height>40</height>
									<texture>$VAR[View_Item_Overlay]</texture>
									<aspectratio>stretch</aspectratio>
									<colordiffuse>Label_Normal</colordiffuse>
									
								</control>
								
							</control>	
							
						</focusedlayout>

						<content target="video">special://skin/playlists/In Progress (TV Shows).xsp</content>
						
					</control>

					<!--Scrollbar-->
					<control type="scrollbar" id="60">
						
						<include>Common_Scrollbar_Horizontal</include>
						<posy>520</posy>
						
						<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(50).Scrolling">Conditional</animation>
						
					</control>

				</control>

			</control>

			<!--Bottom Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>620</posy>
				<width>1280</width>
				<height>100</height>

				<control type="grouplist">
			
					<posx>60</posx>
					<posy>20</posy>
					<width>1160</width>
					<height>60</height>
					<orientation>horizontal</orientation>
					<itemgap>40</itemgap>

					<control type="label">
				
						<width min="0" max="200">auto</width>
						<height>60</height>
						<label>$INFO[Container(50).NumItems,, items]</label>
						<font>Content-Label</font>
						<textcolor>Label_Normal</textcolor>
						<aligny>top</aligny>
				
					</control>
		
				</control>
				
			</control>

		</control>
		
	</controls>

</window>	