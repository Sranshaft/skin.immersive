<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="ViewDetails">
	
		<control type="group">
		
			<posx>60</posx>
			<posy>0</posy>
		
			<visible>Control.IsVisible(59) + IsEmpty(Control.GetLabel(18))</visible>
			
			<include>Common_Animation_View</include>
		
			<control type="label">
					
				<label>explore</label>
				<include>Common_Section_Label</include>
				
			</control>
			
			<control type="panel" id="59">

				<posx>0</posx>
				<posy>60</posy>
				<width>1220</width>
				<height>480</height>
				<onup>10000</onup>
				<ondown>9000</ondown>
				<onleft>59</onleft>
				<onright>59</onright>
				<viewtype label="Details">panel</viewtype>
				<orientation>horizontal</orientation>
				<pagecontrol>69</pagecontrol>
				<focusposition>0</focusposition>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>4</preloaditems>

				<include>Common_Animation_HideWhenScrolling</include>
				
				<itemlayout width="440" height="115">
				
					<control type="image">
							
						<width>420</width>
						<height>95</height>
						<texture border="2">colors/color_white.png</texture>
						<colordiffuse>FanartDiffuse</colordiffuse>
						
					</control>
			
					<include>Common_View_Details</include>
					
				</itemlayout>

				<focusedlayout width="440" height="115">

					<control type="image">
							
						<width>420</width>
						<height>95</height>
						<texture border="2">colors/color_white.png</texture>
						<colordiffuse>FanartDiffuse</colordiffuse>
						
						<visible>!Control.HasFocus(59)</visible>

					</control>
				
					<control type="image">
							
						<width>420</width>
						<height>95</height>
						<texture border="2">colors/color_white.png</texture>
						<colordiffuse>Background_Highlight</colordiffuse>
						
						<visible>Control.HasFocus(59)</visible>

					</control>

					<include>Common_View_Details</include>

				</focusedlayout>

			</control>

			<!--Scrollbar-->
			<control type="scrollbar" id="69">
				
				<include>Common_Scrollbar_Horizontal</include>
				<posy>520</posy>
				
				<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(59).Scrolling">Conditional</animation>
				
			</control>
		
		</control>
		
	</include>

</includes>