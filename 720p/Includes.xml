	<include name="Common_Background">

		<control type="group">

			<!--Background-->
			<control type="image">
			
				<include>Common_Dimensions</include>
				<texture background="true">colors/color_white.png</texture>
				<colordiffuse>Background_Dark</colordiffuse>
				<visible>Skin.HasSetting(UseColorBackground_Home) + StringCompare(Window.Property(xmlfile),Home.xml)</visible>
				
				<animation effect="fade" start="0" end="100" time="1000" reversible="true">VisibleChange</animation>
				
			</control>
			
			<!--Fanart Background (Home)-->
			<control type="group">
			
				<visible>Skin.HasSetting(UseFanartBackground_Home) + StringCompare(Window.Property(xmlfile),Home.xml)</visible>
				
				<animation effect="fade" start="0" end="100" time="1000" reversible="true">VisibleChange</animation>
				
				<control type="multiimage">
				
					<include>Common_Dimensions</include>
					<imagepath background="true">$INFO[Window(Home).Property(script.grab.fanart.Video.Fanart)]</imagepath>
					<fadetime>1000</fadetime>
					<colordiffuse>Background_Normal</colordiffuse>
					<visible>Skin.HasSetting(UseColorDiffuseFanart_Home)</visible>
					
				</control>
			
				<control type="multiimage">
				
					<include>Common_Dimensions</include>
					<imagepath background="true">$INFO[Window(Home).Property(script.grab.fanart.Video.Fanart)]</imagepath>
					<fadetime>1000</fadetime>
					<visible>!Skin.HasSetting(UseColorDiffuseFanart_Home)</visible>
					
				</control>
				
				<include>Common_Background_Fade</include>
				
			</control>
			
			<!--Personalization Background-->
			
			<control type="group">
			
				<visible>!IsEmpty(Skin.String(PersonalizeOverlay)) + StringCompare(Window.Property(xmlfile),Home.xml)</visible>
				
				<animation effect="fade" start="0" end="100" time="1000" reversible="true">VisibleChange</animation>
				
				<control type="image">
				
					<include>Common_Dimensions</include>
					<texture background="true">colors/color_white.png</texture>
					<colordiffuse>Background_Normal</colordiffuse>
					<visible>StringCompare(Skin.String(PersonalizeOverlay),Plain)</visible>
					
				</control>

				<control type="image">
				
					<include>Common_Dimensions</include>
					<texture background="true">$VAR[Home_Background_Image]</texture>
					<colordiffuse>Background_Normal</colordiffuse>
					<visible>Skin.HasSetting(UseColorDiffuseBackground_Home)</visible>
					
				</control>
			
				<control type="image">
				
					<include>Common_Dimensions</include>
					<texture background="true">$VAR[Home_Background_Image]</texture>
					<visible>!Skin.HasSetting(UseColorDiffuseBackground_Home)</visible>
					
				</control>
				
			</control>
			
			<!--Fanart Background-->
			<control type="group">
			
				<visible>Skin.HasSetting(ShowFanartBackground) + !StringCompare(Window.Property(xmlfile),Home.xml)</visible>
				
				<animation effect="fade" start="0" end="100" time="1000" reversible="true">VisibleChange</animation>
				
				<control type="image">
					
					<include>Common_Dimensions</include>
					<fadetime>1000</fadetime>
					<texture background="true">$VAR[Fanart_Image]</texture>
					
				</control>

				<include>Common_Background_Fade</include>
				
			</control>
			
			<!--Audio Background-->
			<control type="group">
			
				<visible>Player.HasAudio + !Skin.HasSetting(NoBackgroundVisualiser)</visible>
				
				<animation effect="fade" start="0" end="100" time="1000" reversible="true">VisibleChange</animation>
			
				<control type="image">
					
					<include>Common_Dimensions</include>
					<texture background="true">colors/color_black.png</texture>
					
				</control>
			
				<control type="visualisation">
					<include>Common_Dimensions</include>
				</control>
				
				<include>Common_Background_Fade</include>
				
			</control>
			
			<!--Video Background-->
			<control type="group">
			
				<visible>Player.HasVideo + !Skin.HasSetting(NoBackgroundVideo)</visible>
				
				<animation effect="fade" start="0" end="100" time="1000" reversible="true">VisibleChange</animation>
			
				<control type="image">
					
					<include>Common_Dimensions</include>
					<texture background="true">colors/color_black.png</texture>
					
				</control>
			
				<control type="videowindow">
					<include>Common_Dimensions</include>
				</control>
				
				<include>Common_Background_Fade</include>
				
			</control>
			
		</control>
		
