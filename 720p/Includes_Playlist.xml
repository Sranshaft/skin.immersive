<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<!--Now Playing Infomation-->
	<include name="Common_Playlist_Player">

		<control type="group">
		
			<posx>60</posx>
			<posy>0</posy>
			<width>460</width>
			<height>480</height>
		
			<control type="label">
					
				<label>now playing</label>
				<include>Common_Section_Label</include>
				
			</control>
			
			<control type="label">
					
				<posx>0</posx>
				<posy>60</posy>
				<width>330</width>
				<height>400</height>
				<label>there is no media currently playing</label>
				<font>Menu-List</font>
				<textcolor>Label_Normal</textcolor>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
				
				<animation type="Conditional" condition="Player.HasMedia">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
				
			</control>
			
			<control type="group">
					
				<visible>Player.HasVideo</visible>
				
				<posx>0</posx>
				<posy>60</posy>

				<control type="image">
					
					<posx>0</posx>
					<posy>0</posy>
					<width>460</width>
					<height>260</height>
					<texture background="true">$VAR[NowPlaying_Image]</texture>
					<aspectratio aligny="top">scale</aspectratio>
				
				</control>
				
				<control type="image">
					
					<posx>0</posx>
					<posy>0</posy>
					<width>460</width>
					<height>260</height>
					<texture border="16">button_unfocus.png</texture>
					
				</control>
			
			</control>
			
			<control type="group">
			
				<visible>Player.HasAudio</visible>
				
				<posx>0</posx>
				<posy>60</posy>

				<control type="image">
					
					<posx>0</posx>
					<posy>0</posy>
					<width>260</width>
					<height>260</height>
					<texture background="true">$VAR[NowPlaying_Image]</texture>
					<aspectratio aligny="top">scale</aspectratio>
				
				</control>
				
				<control type="image">
					
					<posx>0</posx>
					<posy>0</posy>
					<width>260</width>
					<height>260</height>
					<texture border="16">button_unfocus.png</texture>
					
				</control>
			
			</control>
			
			<control type="grouplist">
					
				<posx>0</posx>
				<posy>340</posy>
				<height>180</height>
				<orientation>vertical</orientation>
				<itemgap>0</itemgap>
				<usecontrolcoords>true</usecontrolcoords>

				<control type="textbox">
				
					<width>460</width>
					<height>76</height>
					<label>[UPPERCASE]$VAR[NowPlaying_First_Label][/UPPERCASE]</label>
					<textcolor>Label_Normal</textcolor>
					<font>Fullscreen-Info-Large</font>
					<aligny>top</aligny>
				
				</control>
				
				<control type="textbox">
					
					<posy>10</posy>
					<width>460</width>
					<height>26</height>
					<label>[UPPERCASE]$VAR[NowPlaying_Second_Label][/UPPERCASE]</label>
					<textcolor>Label_Normal</textcolor>
					<font>Fullscreen-Info-Normal</font>
					
				</control>
				
				<control type="label">
			
					<width>460</width>
					<height>26</height>
					<label>[UPPERCASE]$VAR[NowPlaying_Third_Label][/UPPERCASE]</label>
					<textcolor>Label_Normal</textcolor>
					<font>Fullscreen-Info-Normal</font>
					<aligny>top</aligny>
					
				</control>
			
			</control>
			
			<control type="button" id="9007">
		
				<posx>436</posx>
				<posy>10</posy>
				<width>24</width>
				<height>24</height>
				<texturefocus>playercontrols/playercontrol_fullscreen_focus.png</texturefocus>
				<texturenofocus>playercontrols/playercontrol_fullscreen.png</texturenofocus>
				<colordiffuse>Label_Normal</colordiffuse>
				<onleft>50</onleft>
				<onright>50</onright>
				<onclick condition="Player.HasVideo">ActivateWindow(fullscreenvideo)</onclick>
				<onclick condition="Player.HasAudio">ActivateWindow(visualisation)</onclick>
	
			</control>
			
			<!--Current Time-->
			<control type="group">
			
				<posx>0</posx>
				<posy>490</posy>
				<width>260</width>
				<height>40</height>

				<!--Progress Bar-->
				<control type="progress">
				
					<posx>0</posx>
					<posy>0</posy>
					<width>260</width>
					<height>5</height>
					<texturebg border="2">colors/color_grey.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="2">colors/color_silver.png</midtexture>
					<righttexture>-</righttexture>
					<info>Player.ProgressCache</info>
					
				</control>
				
				<!--Progress Bar-->
				<control type="progress">
				
					<description>My first progress control</description>
					<posx>0</posx>
					<posy>0</posy>
					<width>260</width>
					<height>5</height>
					<texturebg border="2">colors/color_transparent.png</texturebg>
					<lefttexture>-</lefttexture>
					<midtexture border="2">colors/color_white.png</midtexture>
					<righttexture>-</righttexture>
					<info>Player.Progress</info>
					<colordiffuse>Background_Highlight</colordiffuse>
					
				</control>

				<control type="slider">

					<posx>0</posx>
					<posy>0</posy>
					<width>260</width>
					<height>5</height>
					<texturesliderbar border="2">colors/color_transparent.png</texturesliderbar>
					<textureslidernib border="2">colors/color_white.png</textureslidernib>
					<textureslidernibfocus border="2">colors/color_white.png</textureslidernibfocus>
					<info>Player.Progress</info>
					<action>seek</action>
					
				</control>
			
				<control type="label">
				
					<posx>0</posx>
					<posy>10</posy>
					<width>100</width>
					<height>40</height>
					<label>$INFO[Player.Time]</label>
					<textcolor>Label_Normal</textcolor>
					<font>Fullscreen-Info-Small</font>
					<aligny>top</aligny>
				
				</control>
				
				<!--Total Time-->
				<control type="label">
				
					<posx>260</posx>
					<posy>10</posy>
					<width>100</width>
					<height>40</height>
					<label>$INFO[Player.Duration]</label>
					<textcolor>Label_Normal</textcolor>
					<font>Fullscreen-Info-Small</font>
					<align>right</align>
					<aligny>top</aligny>
				
				</control>
				
			</control>

		</control>	

	</include>

	<!--Playlist list-->
	<include name="Common_Playlist_Queue">
		
		<control type="group">
		
			<posx>800</posx>
			<posy>0</posy>
			<width>440</width>
			<height>480</height>
			
			<control type="label">
					
				<label>queue</label>
				<include>Common_Section_Label</include>
				
			</control>
			
			<control type="label">
					
				<posx>0</posx>
				<posy>60</posy>
				<width>330</width>
				<height>400</height>
				<label>no further media has been queued</label>
				<font>Menu-List</font>
				<textcolor>Label_Normal</textcolor>
				<wrapmultiline>true</wrapmultiline>
				<aligny>top</aligny>
				
				<animation type="Conditional" condition="IntegerGreaterThan(Container(50).NumItems,1)">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
				
			</control>
			
			<control type="list" id="50">
						
				<posx>0</posx>
				<posy>60</posy>
				<width>400</width>
				<height>420</height>
				<onleft>9000</onleft>
				<onright>9007</onright>
				<onup>50</onup>
				<ondown>50</ondown>
				<pagecontrol>69</pagecontrol>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="cubic" easing="out">600</scrolltime>
				<preloaditems>2</preloaditems>
				
				<animation type="Conditional" condition="!IntegerGreaterThan(Container(50).NumItems,1)">
					<effect type="fade" start="100" end="0" time="200" />
				</animation>
				
				<itemlayout width="400" height="60">
				
					<control type="textbox">
						
						<posx>32</posx>
						<posy>0</posy>
						<width min="20" max="336">auto</width>
						<height>36</height>
						<label>$VAR[Playlist_Header]</label>
						<font>Menu-List</font>
						<textcolor>Label_Normal</textcolor>
						<aligny>top</aligny>
						
					</control>
					
					<control type="textbox">
					
						<posx>32</posx>
						<posy>30</posy>
						<width min="20" max="336">auto</width>
						<height>30</height>
						<label>[UPPERCASE]$VAR[Playlist_SubHeader][/UPPERCASE]</label>
						<font>Menu-List-Small</font>
						<textcolor>Label_Normal</textcolor>
						<selectedcolor>Label_Highlight</selectedcolor>
						<aligny>top</aligny>
						
					</control>
					
				</itemlayout>

				<focusedlayout width="400" height="60">

					<control type="image">
								
						<posx>0</posx>
						<posy>0</posy>
						<width>400</width>
						<height>60</height>
						<texture background="true">colors/color_keyboard.png</texture>
						<visible>!Control.HasFocus(50)</visible>
						
					</control>

					<control type="image">
					
						<posx>0</posx>
						<posy>0</posy>
						<width>400</width>
						<height>60</height>
						<texture>colors/color_white.png</texture>
						<colordiffuse>Background_Highlight</colordiffuse>
						<visible>Control.HasFocus(50)</visible>
					
					</control>
					
					<control type="textbox">
						
						<posx>32</posx>
						<posy>0</posy>
						<width min="20" max="336">auto</width>
						<height>36</height>
						<label>$VAR[Playlist_Header]</label>
						<font>Menu-List</font>
						<textcolor>Label_Normal</textcolor>
						<aligny>top</aligny>
						
					</control>
					
					<control type="textbox">
					
						<posx>32</posx>
						<posy>30</posy>
						<width min="20" max="336">auto</width>
						<height>30</height>
						<label>[UPPERCASE]$VAR[Playlist_SubHeader][/UPPERCASE]</label>
						<font>Menu-List-Small</font>
						<textcolor>Label_Normal</textcolor>
						<selectedcolor>Label_Highlight</selectedcolor>
						<aligny>top</aligny>
						
					</control>

				</focusedlayout>

			</control>
			
			<control type="label">
			
				<posx>0</posx>
				<posy>500</posy>
				<width>400</width>
				<height>64</height>
				<label>[UPPERCASE]$INFO[Container(50).NumItems,Total Items: ,][/UPPERCASE]</label>
				<font>Menu-List-Small</font>
				<textcolor>Label_Disabled</textcolor>
				<align>left</align>
				<aligny>top</aligny>
			
			</control>
			
			<control type="label">
			
				<posx>400</posx>
				<posy>500</posy>
				<width>400</width>
				<height>64</height>
				<label>[UPPERCASE]$INFO[Container(50).Totaltime,Total Playing Time: ,][/UPPERCASE]</label>
				<font>Menu-List-Small</font>
				<textcolor>Label_Disabled</textcolor>
				<align>right</align>
				<aligny>top</aligny>
			
			</control>
			
			<!--Scrollbar-->
			<control type="group">
				
				<visible>IntegerGreaterThan(Container(50).NumPages,1)</visible>
				
				<control type="scrollbar" id="69">
				
					<include>Common_Scrollbar_Vertical</include>
					
					<posx>420</posx>
					<posy>60</posy>
					<height>420</height>
					<onleft>50</onleft>
					<onright>9000</onright>
					
					<animation effect="fade" start="100" end="20" time="200" reversible="true" condition="!Container(50).Scrolling">Conditional</animation>
					
				</control>
			
			</control>
			
		</control>

	</include>
	
</includes>			