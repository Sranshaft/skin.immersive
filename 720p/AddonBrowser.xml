<?xml version="1.0" encoding="UTF-8"?>

<window id="20">
	
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<backgroundcolor>Settings_Background_Light</backgroundcolor>
	<views>50,54,59</views>
	
	<!--Splash Screen-->
	<onload condition="!Skin.HasSetting(NoSplashScreen)">ActivateWindow(60)</onload>
	
	<controls>

		<!--Background Area-->
		<include>Common_Addons_Background</include>
		
		<control type="group">
		
			<include>Common_Dimensions</include>
			<include>Common_Animation_Window</include>
		
			<!--Top Area-->
			<include>Common_Breadcrumb_Dark</include>
			<include>Common_Clock_Dark</include>
			<include>Common_Overlay</include>
			
			<!--Content Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>100</posy>
				<width>1280</width>
				<height>480</height>
				
				<!--Animation-->
				<include>Common_Animation_Content_Splash</include>
				
				<!--Available Views-->
				<include>ViewList</include>
				<include>ViewSquare</include>
				<include>ViewDetails</include>
			
			</control>
			
			<!--Bottom Area-->
			<control type="group">
			
				<posx>0</posx>
				<posy>620</posy>
				<width>1280</width>
				<height>100</height>
			
				<include>Common_Addons_Bottom</include>
				
			</control>
			
			<!--Context Menu-->
			<include>Common_AppBar</include>
			
		</control>	
	
	</controls>

</window>