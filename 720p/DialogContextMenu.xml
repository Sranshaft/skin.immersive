<?xml version="1.0" encoding="UTF-8"?>

<window id="106">
	
	<defaultcontrol always="true">1000</defaultcontrol>
	
	<coordinates>
		<system>1</system>
		<posx>0</posx>
		<posy>0</posy>
	</coordinates>
	
	<controls>
	
		<control type="image">
		
			<include>Common_Dimensions</include>
			<texture background="true">colors/color_white.png</texture>
			<colordiffuse>FanartDiffuse</colordiffuse>
			
			<include>Common_Animation_Window_Dark</include>
			
		</control>
	
		<control type="group">
			
			<posx>1280</posx>
			<posy>0</posy>
			<width>320</width>
			<height>720</height>
			
			<animation effect="slide" start="0,0" end="-320,0" time="400" tween="cubic" easing="out" condition="!Window.Previous(videobookmarks)">WindowOpen</animation>
			<animation effect="slide" start="-320,0" end="0,0" time="200" tween="cubic" easing="in" condition="!Window.Previous(videobookmarks)">WindowClose</animation>
		
			<!--Background-->
			<control type="image">
			
				<posy>0</posy>
				<posy>0</posy>
				<width>320</width>
				<height>720</height>
				<texture background="true">colors/color_keyboard_dark.png</texture>		

			</control>
			
			<include>Common_ContextMenu_Header_Back</include>
			
			<control type="label">
	
				<include>Common_ContextMenu_Header</include>
				<label>Menu</label>
				
			</control>
			
			<control type="grouplist" id="996">
				
				<description>grouplist for context buttons</description>
				<posx>0</posx>
				<posy>92</posy>
				<width>320</width>
				<height>600</height>
				<itemgap>0</itemgap>
				<onright>997</onright>
				
				<control type="button" id="2001">
					
					<include>Common_ContextMenu_Button</include>
					<label>$VAR[ContextMenu_MetaActors_Label]</label>
					<onclick>XBMC.RunScript(script.extendedinfo.immersive,info=extendedactorinfo,name=$INFO[ListItem.Label])</onclick>
					<visible>System.HasAddon(script.extendedinfo.immersive) + [Container.Content(actors) | Container.Content(directors) | Container.Content(artists)]</visible>
					
				</control>
				
				<control type="button" id="1000">
				
					<description>Buttons</description>
					<include>Common_ContextMenu_Button</include>
				
				</control>
				
			</control>
			
		</control>	

	</controls>
	
</window>